<div class="min-h-screen flex">
  <div class="w-1/2 hidden md:flex items-center justify-center bg-gray-100 p-10">
    <img src="/images/study-girl.jpg" alt="Learning" class="rounded shadow-xl max-w-full h-auto">
  </div>

  <div class="w-full md:w-1/2 flex items-center justify-center p-8">
    <div class="w-full max-w-md">
      <h2 class="text-3xl font-semibold mb-6">Create Your Account</h2>

      <form>
        <div class="flex gap-2 mb-4">
          <input type="text" placeholder="First Name" class="w-1/2 p-3 border rounded" />
          <input type="text" placeholder="Last Name" class="w-1/2 p-3 border rounded" />
        </div>

        <div class="mb-4">
          <input type="text" placeholder="Username" class="w-full p-3 border rounded" />
        </div>

        <div class="mb-4">
          <input type="email" placeholder="Email ID" class="w-full p-3 border rounded" />
        </div>

        <div class="flex gap-2 mb-4">
          <input type="password" placeholder="Enter Password" class="w-1/2 p-3 border rounded" />
          <input type="password" placeholder="Confirm Password" class="w-1/2 p-3 border rounded" />
        </div>

        <button type="submit" class="w-full bg-blue-600 text-white p-3 rounded hover:bg-blue-700">
          Create Account
        </button>
      </form>


    </div>
  </div>
</div>
