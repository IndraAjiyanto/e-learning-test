<div class="max-w-5xl mx-auto px-6 py-10 pt-28" x-data="{ search: '' }">
  <div class="flex justify-between items-center mb-6">
            <h2 class="text-3xl font-bold text-centertext-gray-800">Daftar Absens</h2>

            <div class="flex items-center gap-3">
      <input 
        type="text" 
        placeholder="Cari absen" 
        x-model="search"
        class="border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900"
      />
    <a href="/absens/create" class="bg-gray-900 text-white px-4 py-2 rounded-lg shadow hover:bg-gray-600 transition">
      Tambah Absen
    </a>
  </div>
  </div>

  <div class="overflow-x-auto bg-white shadow-lg rounded-xl">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">No</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Kelas</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Pertemuan Ke</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Username</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Status</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Keterangan</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Aksi</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        {{#each absen}}
        <tr class="hover:bg-gray-50 transition" x-show="'{{status}} {{user.username}} {{pertemuan.kelas.nama_kelas}} {{pertemuan.pertemuan_ke}}'.toLowerCase().includes(search.toLowerCase())">
          <td class="px-6 py-4 text-sm text-gray-800">{{addOne @index}}</td>
          <td class="px-6 py-4 text-sm text-gray-800">{{pertemuan.kelas.nama_kelas}}</td>
          <td class="px-6 py-4 text-sm text-gray-800">{{pertemuan.pertemuan_ke}}</td>
          <td class="px-6 py-4 text-sm text-gray-800">{{user.username}}</td>
          <td class="px-6 py-4 text-sm text-gray-800">{{status}}</td>
          <td class="px-6 py-4 text-sm text-gray-800">{{keterangan}}</td>
          <td class="px-6 py-4 text-sm text-gray-800 space-x-2">
            <a href="/absens/{{id}}" class="inline-block text-gray-600 font-medium hover:underline">Lihat Absen</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
