<div class="pt-28 py-20">
  <div class="max-w-2xl mx-auto px-6 py-10 bg-white rounded-xl shadow-lg">
    <h2 class="text-2xl font-semibold mb-6 text-gray-900">Edit Attendance</h2>

    <form action="/absens/{{absen.id}}?_method=PATCH" method="POST" class="space-y-6">

      <!-- Status -->
      <div>
        <label for="status" class="block text-sm font-medium text-gray-700 mb-1">Status</label>
        <select id="status" name="status" required
          class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700">
          <option value="hadir" {{#if (roles absen.status "hadir")}}selected{{/if}}>Present</option>
          <option value="izin" {{#if (roles absen.status "izin")}}selected{{/if}}>Permission</option>
          <option value="sakit" {{#if (roles absen.status "sakit")}}selected{{/if}}>Sick</option>
          <option value="alfa" {{#if (roles absen.status "alfa")}}selected{{/if}}>Absent</option>
          <option value="tidak ada keterangan" {{#if (roles absen.status "tidak ada keterangan")}}selected{{/if}}>No Information</option>
        </select>
      </div>

      <!-- Date -->
      <div>
        <label for="waktu_absen" class="block text-sm font-medium text-gray-700 mb-1">Attendance Date</label>
        <input type="date" id="waktu_absen" name="waktu_absen" 
          value="{{formDate absen.waktu_absen}}" required
          class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700">
      </div>

      <!-- Note -->
      <div>
        <label for="keterangan" class="block text-sm font-medium text-gray-700 mb-1">Note</label>
        <textarea id="keterangan" name="keterangan" rows="3" placeholder="Enter additional note..."
          class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700">{{absen.keterangan}}</textarea>
      </div>

      <!-- Buttons -->
      <div class="flex gap-3">
        <button type="submit"
          class="bg-gray-900 text-white px-6 py-2 rounded-lg shadow hover:bg-gray-600 transition">
          Update
        </button>
        <a href="/pertemuans/{{absen.pertemuan.id}}"
          class="px-6 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
          Cancel
        </a>
      </div>

    </form>
  </div>
</div>
