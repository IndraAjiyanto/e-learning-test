<div class="pt-28 py-20">
<div class="max-w-2xl mx-auto px-6 py-10 bg-white rounded-xl shadow-lg">
  <h2 class="text-2xl font-semibold mb-6">Tambah Kelas Baru</h2>

  <form method="POST" action="/kelass" class="space-y-6" enctype="multipart/form-data">
    <div>
      <label for="gambar" class="block text-sm font-medium text-gray-700 mb-1">Profile Kelas</label>
      <input type="file" id="gambar" name="gambar" accept="image/*" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900">
    </div>

    <div>
      <label for="nama" class="block text-sm font-medium text-gray-700 mb-1">Nama Kelas</label>
      <input type="text" id="nama" name="nama_kelas" required
        class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900">
    </div>

    <div>
      <label for="deskripsi" class="block text-sm font-medium text-gray-700 mb-1">Deskripsi</label>
      <textarea id="deskripsi" name="deskripsi" rows="3"
        class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900"></textarea>
    </div>

    <div class="flex space-x-4">
      <button type="submit"
        class="bg-gray-900 text-white px-6 py-2 rounded-lg shadow hover:bg-gray-600 transition">
        Simpan
      </button>
      <a href="/kelass"
        class="px-6 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
        Batal
      </a>
    </div>
  </form>
</div>
</div>