<div class="pt-28">
  <div class="max-w-6xl mx-auto px-6 py-10 bg-white rounded-2xl shadow-xl space-y-8">

    <div>
      <a href="/kelass" 
         class="inline-flex items-center text-gray-600 text-base font-medium hover:underline">
        <svg xmlns="http://www.w3.org/2000/svg" 
             class="h-5 w-5 mr-1" fill="none" 
             viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d="M15 19l-7-7 7-7" />
        </svg>
        Back
      </a>
    </div>

      <div class="flex items-start justify-between">
      <div class="flex gap-6">
        <img src="{{kelas.gambar}}" 
             alt="" 
             class="w-40 h-40 object-cover rounded-lg shadow-md">
        <div>
          <h1 class="text-3xl text-gray-900 font-bold mb-2">{{kelas.nama_kelas}}</h1>
          <p class="text-gray-700 mb-1">{{kelas.deskripsi}}</p>
          <p class="text-gray-700"><span class="font-semibold">Tech:</span> {{kelas.teknologi}}</p>
          <p class="text-gray-700"><span class="font-semibold">Target:</span> {{kelas.target_pembelajaran}}</p>
          <p class="text-gray-700"><span class="font-semibold">Category:</span> {{kelas.kategori.nama_kategori}}</p>
        </div>
      </div>
      <div class="flex items-center gap-3">
        <a href="/kelass/edit/{{kelas.id}}" 
           class="bg-gray-900 text-white px-4 py-2 rounded-lg shadow hover:bg-gray-700 transition">
          Edit Class
        </a>
        <form action="/kelass/{{kelas.id}}?_method=DELETE" method="post">
          <button 
            type="button"
            onclick="confirmDelete(this)"
            class="bg-red-500 text-white px-4 py-2 rounded-lg shadow hover:bg-red-400 transition">
            Delete
          </button>
        </form>
      </div>
    </div>

    <!-- Sessions -->
    <div class="space-y-4">
      <div class="flex items-center justify-between">
        <h2 class="text-2xl text-gray-900 font-semibold">Sessions</h2>
        {{#if pertemuanTerakhir}}
          <div class="bg-yellow-50 border border-yellow-200 text-yellow-700 px-4 py-2 rounded-lg italic text-sm">
            You canâ€™t add another session because this is the final meeting.
          </div>
        {{else}}
          <a href="/pertemuans/formAdd/{{kelas.id}}" 
             class="bg-gray-900 text-white px-4 py-2 rounded-lg shadow hover:bg-gray-700 transition">
            Create Session
          </a>
        {{/if}}
      </div>

      {{#if pertemuan.length}}
        <div class="grid gap-4">
          {{#each pertemuan}}
            <div class="bg-gray-50 p-4 rounded-xl shadow hover:bg-gray-100 transition">
              <div class="flex justify-between items-start">
                <div>
                  <p class="font-semibold text-gray-900 mb-1">Session {{this.pertemuan_ke}}: {{this.topik}}</p>
                  
                  <div class="grid grid-cols-2 gap-x-8 gap-y-1 text-sm text-gray-600">
                    <p><span class="font-medium">Method:</span> {{this.metode}}</p>
                    <p><span class="font-medium">Location:</span> {{this.lokasi}}</p>
                    <p><span class="font-medium">Time:</span> {{formatTime this.waktu_awal}} - {{formatTime this.waktu_akhir}}</p>
                    <p><span class="font-medium">Date:</span> {{formatTanggal this.tanggal}}</p>
                  </div>
                </div>
                <a href="/pertemuans/{{this.id}}" 
                   class="text-indigo-600 hover:text-indigo-800 font-medium">
                  View
                </a>
              </div>
            </div>
          {{/each}}
        </div>
      {{else}}
        <p class="text-gray-600 italic">No sessions are available yet</p>
      {{/if}}
    </div>

  </div>
</div>
