<div class="pt-28 py-20">
  <div class="max-w-2xl mx-auto px-6 py-10 bg-white rounded-xl shadow-lg">
    <h2 class="text-2xl text-gray-900 font-semibold mb-6">Log Book Form</h2>

    <form action="/logbook-mentor/{{pertemuanId}}" method="POST" enctype="multipart/form-data" class="space-y-6">

      <div>
        <label for="kegiatan" class="block text-sm font-semibold text-gray-700 mb-1">Activity</label>
        <input type="text" id="kegiatan" name="kegiatan" required placeholder="Enter activity..."
          class="w-full border text-gray-700 bg-white border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900" />
      </div>

      <div>
        <label for="rincian_kegiatan" class="block text-sm font-semibold text-gray-700 mb-1">Activity Details</label>
        <textarea name="rincian_kegiatan" id="rincian_kegiatan"
          placeholder="Enter activity details..."
          class="w-full text-gray-700 bg-white border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900"></textarea>
      </div>

      <div>
        <label for="kendala" class="block text-sm font-semibold text-gray-700 mb-1">Obstacle</label>
        <input type="text" id="kendala" name="kendala" required placeholder="Enter obstacle..."
          class="w-full border text-gray-700 bg-white border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900" />
      </div>

      <div x-data="{ previewUrl: null }" class="space-y-3">
        <label for="dokumentasi" class="block text-sm font-semibold text-gray-700 mb-1">
          Photo Documentation
        </label>
        <input 
          type="file" 
          id="dokumentasi" 
          name="dokumentasi" 
          accept="image/*" 
          x-ref="fileInput"
          class="w-full border  bg-white border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700"
          @change="previewUrl = $event.target.files[0] ? URL.createObjectURL($event.target.files[0]) : null"
        >

        <template x-if="previewUrl">
          <div class="relative w-32 h-32">
            <img 
              :src="previewUrl" 
              alt="Photo Preview" 
              class="w-32 h-32 object-cover rounded-lg border border-gray-300"
            >

            <button 
              type="button" 
              class="absolute -top-2 -right-2 bg-red-500 text-white w-6 h-6 rounded-full flex items-center justify-center shadow hover:bg-red-600"
              @click="previewUrl = null; $refs.fileInput.value = null;">
              &times;
            </button>
          </div>
        </template>
      </div>

      <div class="flex space-x-4">
        <button type="submit"
          class="bg-gray-900 text-white px-6 py-2 rounded-lg shadow hover:bg-gray-600 transition">
          Add Log Book
        </button>
        <a href="/pertemuans/{{pertemuanId}}"
          class="px-6 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
          Cancel
        </a>
      </div>
    </form>
  </div>
</div>
