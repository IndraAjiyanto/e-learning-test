<div class="pt-28 py-20">
  <div class="max-w-2xl mx-auto px-6 py-10 bg-white rounded-xl shadow-lg">
    <h2 class="text-2xl font-semibold mb-6 text-gray-900">Edit session</h2>

    <form method="POST" action="/pertemuans/{{pertemuan.id}}?_method=PATCH" class="space-y-6">

      <!-- Metode -->
      <div>
        <span class="block text-sm font-medium text-gray-700 mb-2">Metode</span>
        <div class="grid grid-cols-2 gap-4">

          <label class="cursor-pointer">
            <input type="radio" name="metode" value="online" class="hidden peer"
              {{#if (roles pertemuan.metode "online")}}checked{{/if}}>
            <div class="flex items-center justify-center px-4 py-3 border rounded-lg transition
                        peer-checked:border-gray-900 peer-checked:bg-gray-900 peer-checked:text-white">
              <span class="font-medium">Online</span>
            </div>
          </label>

          <label class="cursor-pointer">
            <input type="radio" name="metode" value="offline" class="hidden peer"
              {{#if (roles pertemuan.metode "offline")}}checked{{/if}}>
            <div class="flex items-center justify-center px-4 py-3 border rounded-lg transition
                        peer-checked:border-gray-900 peer-checked:bg-gray-900 peer-checked:text-white">
              <span class="font-medium">Offline</span>
            </div>
          </label>

        </div>
      </div>

      <!-- Lokasi -->
      <div>
        <label for="lokasi" class="block text-sm font-medium text-gray-700 mb-1">Location</label>
        <input type="text" id="lokasi" name="lokasi" required
          value="{{pertemuan.lokasi}}"
          class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 
                 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700">
      </div>

      <!-- Topik -->
      <div>
        <label for="topik" class="block text-sm font-medium text-gray-700 mb-1">Topic</label>
        <textarea id="topik" name="topik" rows="3"
          class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 
                 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700">{{pertemuan.topik}}</textarea>
      </div>

      <!-- Tanggal -->
      <div>
        <label for="tanggal" class="block text-sm font-medium text-gray-700 mb-1">Date</label>
        <input type="date" id="tanggal" name="tanggal" required
          value="{{formDate pertemuan.tanggal}}"
          class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 
                 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700">
      </div>

      <!-- Waktu Awal -->
      <div>
        <label for="waktu_awal" class="block text-sm font-medium text-gray-700 mb-1">Time start</label>
        <input type="time" id="waktu_awal" name="waktu_awal" required
          value="{{formatTime pertemuan.waktu_awal}}"
          class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 
                 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700">
      </div>

      <!-- Waktu Akhir -->
      <div>
        <label for="waktu_akhir" class="block text-sm font-medium text-gray-700 mb-1">Time end</label>
        <input type="time" id="waktu_akhir" name="waktu_akhir" required
          value="{{formatTime pertemuan.waktu_akhir}}"
          class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 
                 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700">
      </div>

      <!-- Toggle Pertemuan Terakhir -->
      <div x-data="{ launch: {{pertemuan.akhir}} }" class="flex items-center gap-3">
        <label class="relative inline-flex items-center cursor-pointer">
          <input type="checkbox" x-model="launch" class="sr-only">
          <div :class="launch ? 'bg-green-500' : 'bg-gray-300'"
               class="w-11 h-6 rounded-full transition-colors"></div>
          <div :class="launch ? 'translate-x-5' : 'translate-x-0'"
               class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full transition-transform"></div>
        </label>
        <span class="text-sm text-gray-700">Klik toggle jika pertemuan terakhir</span>
        <input type="hidden" name="akhir_check" :value="launch">
      </div>

      <!-- Tombol -->
      <div class="flex gap-3">
        <button type="submit"
          class="bg-gray-900 text-white px-6 py-2 rounded-lg shadow hover:bg-gray-600 transition">
          Update
        </button>
        <a href="/pertemuans/{{pertemuan.id}}"
          class="px-6 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
          Cancel
        </a>
      </div>
    </form>
  </div>
</div>
