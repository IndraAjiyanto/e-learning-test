<div class="pt-28 py-20">
  <div class="max-w-4xl mx-auto px-6 py-10 bg-white rounded-xl shadow-lg">
    <h2 class="text-2xl font-semibold mb-8 text-gray-900 text-center">Create New Session</h2>

    <form method="POST" action="/pertemuans/{{mingguId}}" class="space-y-8">
      
      <!-- Grid 2 Kolom -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        
        <!-- Lokasi -->
        <div>
          <label for="lokasi" class="block text-sm font-semibold text-gray-700 mb-1">Location</label>
          <input type="text" id="lokasi" name="lokasi" required
            class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700">
        </div>

        <!-- Tanggal -->
        <div>
          <label for="tanggal" class="block text-sm font-semibold text-gray-700 mb-1">Date</label>
          <input type="date" id="tanggal" name="tanggal" required
            class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700">
        </div>

        <!-- Waktu Awal -->
        <div>
          <label for="waktu_awal" class="block text-sm font-semibold text-gray-700 mb-1">Time Start</label>
          <input type="time" id="waktu_awal" name="waktu_awal" required
            class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700">
        </div>

        <!-- Waktu Akhir -->
        <div>
          <label for="waktu_akhir" class="block text-sm font-semibold text-gray-700 mb-1">Time End</label>
          <input type="time" id="waktu_akhir" name="waktu_akhir" required
            class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700">
        </div>
      </div>

      <!-- Topik -->
      <div>
        <label for="topik" class="block text-sm font-semibold text-gray-700 mb-1">Topic</label>
        <textarea id="topik" name="topik" rows="3"
          class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700"></textarea>
      </div>

      <div x-data="{ launch: false }" class="flex items-center gap-3">
  <label class="relative inline-flex items-center cursor-pointer">
    <input type="checkbox" x-model="launch" class="sr-only">

    <div :class="launch ? 'bg-green-500' : 'bg-gray-300'"
         class="w-11 h-6 rounded-full transition-colors"></div>

    <div :class="launch ? 'translate-x-5' : 'translate-x-0'"
         class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full transition-transform"></div>
  </label>

  <span class="text-sm text-gray-700">Click toggle if itâ€™s the last week</span>

  <input type="hidden" name="akhir_check" :value="launch">
</div>

      <!-- Tombol Aksi di Kiri -->
      <div class="flex justify-start gap-3">
                <button type="submit"
          class="bg-gray-900 text-white px-6 py-2 rounded-lg shadow hover:bg-gray-700 transition">
          Create
        </button>
        <a href="/minggu/{{mingguId}}"
          class="px-6 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
          Cancel
        </a>

      </div>

    </form>
  </div>
</div>
