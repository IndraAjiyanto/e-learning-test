<div class="pt-28 py-20">
<div class="max-w-2xl mx-auto px-6 py-10 bg-white rounded-xl shadow-lg ">
  <h2 class="text-2xl font-semibold mb-6">Tambah Pertemuan Baru</h2>

  <form method="POST" action="/pertemuans" class="space-y-6">
    <div>
    <label for="kelasId" class="block text-sm font-medium text-gray-700 mb-1">Pilih Role</label>
      <select name="kelasId" id="kelasId" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900">
        {{#each kelas}}
        <option value = "{{id}}" >{{nama_kelas}}</option>
        {{/each}}
      </select>
    </div>
    <div>
      <label for="topik" class="block text-sm font-medium text-gray-700 mb-1">Topik</label>
      <textarea id="topik" name="topik" rows="3"
        class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900"></textarea>
    </div>

    <div>
      <label for="tanggal" class="block text-sm font-medium text-gray-700 mb-1">Tanggal</label>
      <input type="date" id="tanggal" name="tanggal" required
        class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900">
    </div>

    <div>
      <label for="waktu_awal" class="block text-sm font-medium text-gray-700 mb-1">Waktu Awal</label>
      <input type="time" id="waktu_awal" name="waktu_awal" required
        class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900">
    </div>

    <div>
      <label for="waktu_akhir" class="block text-sm font-medium text-gray-700 mb-1">Waktu Akhir</label>
      <input type="time" id="waktu_akhir" name="waktu_akhir" required
        class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900">
    </div>

    <div class="flex space-x-4">
      <button type="submit"
        class="bg-gray-900 text-white px-6 py-2 rounded-lg shadow hover:bg-gray-600 transition">
        Simpan
      </button>
      <a href="/pertemuans"
        class="px-6 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
        Batal
      </a>
    </div>
  </form>
</div>
</div>