<div class="px-6 py-10 pt-28 bg-gray-50 min-h-screen">
  <div class="max-w-5xl mx-auto">
    
    <!-- Task PDF Section -->
    {{#if tugas.file}}
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden mb-8">
      <div class="bg-gradient-to-r from-gray-900 to-gray-800 px-6 py-4">
        <div class="flex items-center gap-3">
          <div class="w-12 h-12 rounded-full bg-white/10 backdrop-blur-sm flex items-center justify-center">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div>
            <h4 class="text-white font-bold text-lg">Assignment File</h4>
            <p class="text-gray-300 text-sm">{{tugas.judul}}</p>
          </div>
        </div>
      </div>

      <div class="p-6 bg-gray-50">
        <div class="bg-white rounded-xl shadow-lg overflow-hidden border-2 border-gray-200">
          <iframe 
            src="https://mozilla.github.io/pdf.js/web/viewer.html?file={{tugas.file}}" 
            class="w-full h-[600px]" 
            type="application/pdf"
          ></iframe>
        </div>
      </div>
    </div>
    {{/if}}

    <!-- Header Section -->
    <div class="mb-8">
      <div class="inline-block px-4 py-2 bg-gray-900/10 backdrop-blur-sm rounded-full mb-4">
        <span class="text-gray-900 text-sm font-medium">Answer Management</span>
      </div>
      <h3 class="text-4xl font-bold text-gray-900 mb-2">User Answers</h3>
      <p class="text-gray-600">Review and give feedback on each submitted answer</p>
    </div>

    {{#if jawaban_tugas.length}}
      <div class="space-y-6">
        {{#each jawaban_tugas}}
          <div class="bg-white rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-300">
            
            <!-- Card Header -->
            <div class="bg-gradient-to-r from-gray-900 to-gray-800 px-6 py-4">
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 rounded-full bg-white/10 backdrop-blur-sm flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  <div>
                    <h4 class="text-white font-semibold">{{this.user.username}}</h4>
                    <p class="text-gray-300 text-xs">{{this.user.email}}</p>
                  </div>
                </div>
                
                <span class="inline-flex items-center px-3 py-1 text-xs font-medium rounded-full
                  {{#if (roles this.proses 'acc')}} bg-green-100 text-green-700
                  {{else if (roles this.proses 'rejected')}} bg-red-100 text-red-700
                  {{else}} bg-yellow-100 text-yellow-700 {{/if}}">
                  <span class="w-2 h-2 rounded-full mr-2 
                    {{#if (roles this.proses 'acc')}} bg-green-500
                    {{else if (roles this.proses 'rejected')}} bg-red-500
                    {{else}} bg-yellow-500 {{/if}}">
                  </span>
                  {{this.proses}}
                </span>
              </div>
            </div>

            <!-- Card Body -->
            <div class="p-6 space-y-5">
              
              <!-- Uploaded File Info -->
              <div class="flex items-center justify-between p-4 bg-gray-50 rounded-xl border border-gray-200">
                <div class="flex flex-col w-full">
                  <a href="{{this.file}}" target="_blank" class="text-gray-900 font-medium hover:text-blue-600 break-words">
                    {{this.file}}
                  </a>
                  <p class="text-xs text-gray-500 mt-1">
                    Submitted on: {{formatTanggal this.createdAt}}
                  </p>
                </div>
                <a href="{{this.file}}" target="_blank" class="px-4 py-2 bg-gray-900 text-white rounded-lg text-sm font-medium hover:bg-gray-800 transition-colors whitespace-nowrap">
                  Open Link
                </a>
              </div>

              <!-- Comment Form -->
              <form action="/komentar/{{tugas.id}}/{{this.id}}" method="POST" class="space-y-4">
                <div>
                  <label class="block text-sm font-semibold text-gray-900 mb-2">
                    Leave a Comment
                  </label>
                  <textarea 
                    name="komentar" 
                    rows="3" 
                    class="w-full px-4 py-3 text-sm border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-gray-900 focus:border-gray-900 transition-all bg-white"
                    placeholder="Write feedback or comments for this answer..."
                  ></textarea>
                </div>

                <div class="flex items-center gap-3">
                  <button type="submit" name="proses" value="acc"
                    class="flex-1 px-6 py-3 text-sm font-semibold rounded-xl bg-green-500 text-white hover:bg-green-600 transition-all duration-200 flex items-center justify-center gap-2 shadow-lg hover:shadow-xl">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Approve
                  </button>
                  <button type="submit" name="proses" value="rejected"
                    class="flex-1 px-6 py-3 text-sm font-semibold rounded-xl bg-red-500 text-white hover:bg-red-600 transition-all duration-200 flex items-center justify-center gap-2 shadow-lg hover:shadow-xl">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    Reject
                  </button>
                </div>
              </form>

              <!-- Comment History -->
              {{#if this.komentar}}
                <div class="space-y-3 pt-4 border-t-2 border-gray-100">
                  <div class="flex items-center gap-2 mb-3">
                    <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                    </svg>
                    <h5 class="text-sm font-semibold text-gray-900">Comment History</h5>
                  </div>
                  {{#each komentar}}
                    <div class="p-4 bg-gradient-to-r from-gray-50 to-white border-l-4 border-gray-900 rounded-lg">
                      <p class="text-sm text-gray-800 leading-relaxed">{{this.komentar}}</p>
                    </div>
                  {{/each}}
                </div>
              {{/if}}
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <!-- Empty State -->
      <div class="bg-white rounded-2xl shadow-xl p-12 text-center">
        <div class="w-20 h-20 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
          <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <h4 class="text-xl font-bold text-gray-900 mb-2">No Answers Yet</h4>
        <p class="text-gray-600">No user has submitted an answer for this assignment yet.</p>
      </div>
    {{/if}}

    <!-- Back Button -->
    <div class="mt-8">
      <a href="/pertemuans/{{tugas.pertemuan.id}}" 
         class="inline-flex items-center gap-2 px-6 py-3 text-sm font-semibold rounded-xl bg-white text-gray-900 border-2 border-gray-900 hover:bg-gray-900 hover:text-white transition-all duration-200 shadow-lg hover:shadow-xl">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back
      </a>
    </div>
  </div>
</div>
