<form action="/pertanyaans/{{pertemuan.id}}" method="POST" class="space-y-6">
  <div>
    <label class="block text-sm font-medium mb-1">Pertanyaan</label>
    <textarea name="pertanyaan_soal" rows="4"
      class="w-full border rounded-lg p-3 focus:ring-2 focus:ring-gray-900"
      placeholder="Tulis pertanyaan di sini..." required></textarea>
  </div>

  <div class="space-y-4">
    {{!-- Pilihan 0 --}}
    <div class="flex items-center gap-3">
      <input type="radio" name="jawaban" value="0" required>
      <div class="flex-1">
        <label class="block text-sm font-medium mb-1">Pilihan A</label>
        <input type="text" name="pilihan[]" 
          class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-gray-900"
          required>
      </div>
    </div>

    {{!-- Pilihan 1 --}}
    <div class="flex items-center gap-3">
      <input type="radio" name="jawaban" value="1" required>
      <div class="flex-1">
        <label class="block text-sm font-medium mb-1">Pilihan B</label>
        <input type="text" name="pilihan[]" 
          class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-gray-900"
          required>
      </div>
    </div>

    {{!-- Pilihan 2 --}}
    <div class="flex items-center gap-3">
      <input type="radio" name="jawaban" value="2" required>
      <div class="flex-1">
        <label class="block text-sm font-medium mb-1">Pilihan C</label>
        <input type="text" name="pilihan[]" 
          class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-gray-900"
          required>
      </div>
    </div>

    {{!-- Pilihan 3 --}}
    <div class="flex items-center gap-3">
      <input type="radio" name="jawaban" value="3" required>
      <div class="flex-1">
        <label class="block text-sm font-medium mb-1">Pilihan D</label>
        <input type="text" name="pilihan[]" 
          class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-gray-900"
          required>
      </div>
    </div>
  </div>

  <div class="flex justify-end">
    <button type="submit"
      class="bg-gray-900 text-white px-6 py-2 rounded-lg shadow hover:bg-gray-700 transition">
      Simpan Pertanyaan
    </button>
  </div>
</form>
