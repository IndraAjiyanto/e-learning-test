<div class="pt-28 py-20">
  <div class="max-w-2xl mx-auto px-6 py-10 bg-white rounded-xl shadow-lg">
    <h2 class="text-2xl font-bold mb-6 text-gray-900">Create new weeks</h2>

    <form method="POST" action="/quiz/{{mingguId}}" class="space-y-6">

      <div>
        <label for="nama_quiz" class="block text-sm font-semibold text-gray-700 mb-1">Quiz</label>
        <textarea id="nama_quiz" name="nama_quiz" rows="3"
          class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700"></textarea>
      </div>

            <div>
        <label for="nilai_minimal" class="block text-sm font-medium text-gray-700 mb-1">
          Minimum Score
        </label>
        <input type="number" id="nilai_minimal" name="nilai_minimal" rows="4"
          class="w-full border bg-white rounded-lg p-3 focus:ring-2 focus:ring-gray-900 text-gray-700">
      </div>

      <div class="flex gap-3">
        <button type="submit"
          class="bg-gray-900 text-white px-6 py-2 rounded-lg shadow hover:bg-gray-600 transition">
          Create
        </button>
        <a href="/minggu/{{mingguId}}"
          class="px-6 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
          Cancel
        </a>
      </div>
    </form>
  </div>
</div>
