<div class="pt-28">
  <div class="max-w-4xl mx-auto px-6 py-10">
    <h2 class="text-2xl font-bold mb-6">Buat Pertanyaan Baru</h2>

    <div class="bg-white p-6 rounded-lg shadow-lg">
      <form action="/pertanyaans" method="POST" class="space-y-6">
        
        <div>
          <label class="block text-sm font-medium mb-1">Pertanyaan</label>
          <textarea name="soal" rows="4"
            class="w-full border rounded-lg p-3 focus:ring-2 focus:ring-gray-900"
            placeholder="Tulis pertanyaan di sini..." required></textarea>
        </div>

        <div class="space-y-4">
          <div class="flex items-center gap-3">
            <input type="radio" name="jawaban" value="A" required
              class="w-5 h-5 text-gray-900 border-gray-300 focus:ring-gray-900">
            <div class="flex-1">
              <label class="block text-sm font-medium mb-1">Pilihan A</label>
              <input type="text" name="pilihanA"
                class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-gray-900"
                required>
            </div>
          </div>

          <div class="flex items-center gap-3">
            <input type="radio" name="jawaban" value="B" required
              class="w-5 h-5 text-gray-900 border-gray-300 focus:ring-gray-900">
            <div class="flex-1">
              <label class="block text-sm font-medium mb-1">Pilihan B</label>
              <input type="text" name="pilihanB"
                class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-gray-900"
                required>
            </div>
          </div>

          <div class="flex items-center gap-3">
            <input type="radio" name="jawaban" value="C" required
              class="w-5 h-5 text-gray-900 border-gray-300 focus:ring-gray-900">
            <div class="flex-1">
              <label class="block text-sm font-medium mb-1">Pilihan C</label>
              <input type="text" name="pilihanC"
                class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-gray-900"
                required>
            </div>
          </div>

          <div class="flex items-center gap-3">
            <input type="radio" name="jawaban" value="D" required
              class="w-5 h-5 text-gray-900 border-gray-300 focus:ring-gray-900">
            <div class="flex-1">
              <label class="block text-sm font-medium mb-1">Pilihan D</label>
              <input type="text" name="pilihanD"
                class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-gray-900"
                required>
            </div>
          </div>
        </div>

        <div class="flex justify-end">
          <button type="submit"
            class="bg-gray-900 text-white px-6 py-2 rounded-lg shadow hover:bg-gray-700 transition">
            Simpan Pertanyaan
          </button>
        </div>

      </form>
    </div>
  </div>
</div>
