<div class="pt-28 py-20">
  <div class="max-w-2xl mx-auto px-6 py-10 bg-white rounded-xl shadow-lg">
    <h2 class="text-2xl font-semibold mb-6 text-gray-900">Edit Question</h2>

    <form action="/pertanyaans/{{pertanyaan.id}}/{{pertanyaan.quiz.id}}?_method=PATCH" method="POST" class="space-y-6" enctype="multipart/form-data">
      
      <div 
  x-data="{ 
    previewUrl: null, 
    oldPhoto: '{{#if pertanyaan.gambar}}{{pertanyaan.gambar}}{{else}}/images/default-avatar.png{{/if}}' 
  }" 
  class="space-y-3"
>
  <label for="gambar" class="block text-sm font-semibold text-gray-700 mb-1">
    Photos gambar
  </label>

  <!-- Input file -->
  <input 
    type="file" 
    id="gambar" 
    name="gambar" 
    accept="image/*" 
    x-ref="fileInput"
    class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700"
    @change="previewUrl = $event.target.files[0] ? URL.createObjectURL($event.target.files[0]) : null"
  >

  <!-- Tampilkan foto lama atau preview baru -->
  <div class="relative w-32 h-32">
    <img 
      :src="previewUrl ? previewUrl : oldPhoto" 
      alt="Preview Photo" 
      class="w-32 h-32 object-cover rounded-lg border border-gray-300"
    >

    <!-- Tombol hapus foto baru -->
    <template x-if="previewUrl">
      <button 
        type="button" 
        class="absolute -top-2 -right-2 bg-red-500 text-white w-6 h-6 rounded-full flex items-center justify-center shadow hover:bg-red-600"
        @click="previewUrl = null; $refs.fileInput.value = null;">
        &times;
      </button>
    </template>
  </div>
</div>

      <!-- Pertanyaan -->
      <div>
        <label for="pertanyaan_soal" class="block text-sm font-medium text-gray-700 mb-1">
          Pertanyaan
        </label>
        <textarea id="pertanyaan_soal" name="pertanyaan_soal" rows="4"
          class="w-full border bg-white rounded-lg p-3 focus:ring-2 focus:ring-gray-900 text-gray-700"
          placeholder="Tulis pertanyaan di sini..." required>{{pertanyaan.pertanyaan_soal}}</textarea>
      </div>

      <!-- Pilihan Jawaban -->
      <div class="space-y-4">
        {{#each pertanyaan.jawaban}}
        <div class="flex items-center gap-3">
          <input type="radio" name="jawaban" value="{{@index}}" required
            class="h-5 w-5 border-gray-400 text-gray-900 focus:ring-gray-900"
            {{#if this.jawaban_benar}}checked{{/if}} />
          <div class="flex-1">
            <label class="block text-sm font-medium text-gray-700 mb-1">Pilihan {{lookup "ABCD" @index}}</label>
            <input type="text" name="pilihan[]" value="{{this.jawaban}}"
              class="w-full border bg-white rounded-lg px-3 py-2 focus:ring-2 focus:ring-gray-900 text-gray-700"
              placeholder="Tulis pilihan {{lookup "ABCD" @index}}" required />
          </div>
        </div>
        {{/each}}
      </div>

      <!-- Tombol -->
      <div class="flex justify-start gap-3 pt-4">
        <button type="submit"
          class="bg-gray-900 text-white px-6 py-2 rounded-lg shadow hover:bg-gray-700 transition">
          Update Question
        </button>
        <a href="/quiz/{{pertanyaan.quiz.id}}"
          class="px-6 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
          Cancel
        </a>
      </div>
    </form>
  </div>
</div>
