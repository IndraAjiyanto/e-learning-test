<div class="pt-28 py-20">
  <div class="max-w-2xl mx-auto px-6 py-10 bg-white rounded-xl shadow-lg">
    <div class="mb-6">
      <h2 class="text-2xl font-semibold text-gray-900">Create New Assignment</h2>
    </div>

    <form action="/tugass/{{pertemuanId}}" method="POST" enctype="multipart/form-data" class="space-y-6">
      
      <!-- Assignment Title -->
      <div>
        <label for="title" class="block text-sm font-medium text-gray-700 mb-2">Assignment Title</label>
        <input type="text" id="title" name="judul" 
               placeholder="Enter assignment title..."
               class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700" 
               required>
      </div>

      <!-- Upload File -->
      <div>
        <label for="file" class="block text-sm font-medium text-gray-700 mb-2">Upload Assignment File</label>
        <input type="file" id="file" name="file" accept=".pdf,.doc,.docx,.zip,.rar"
               class="w-full border border-gray-300 rounded-lg px-4 py-2 text-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-900" 
               required>
        <p class="text-gray-500 text-xs mt-1">Supported formats: PDF, DOC, DOCX, ZIP, RAR</p>
      </div>

      <!-- Buttons -->
      <div class="flex justify-start gap-3 pt-4">
        <button type="submit"
          class="bg-gray-900 text-white px-6 py-2 rounded-lg shadow hover:bg-gray-700 transition">
          Create Assignment
        </button>
        <a href="/pertemuans/{{pertemuanId}}"
          class="px-6 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
          Cancel
        </a>
      </div>
    </form>
  </div>
</div>
