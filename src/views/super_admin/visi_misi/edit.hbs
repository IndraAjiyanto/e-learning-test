<div class="pt-28 py-20">
  <div class="max-w-2xl mx-auto px-6 py-10 bg-white rounded-xl shadow-lg">
    <h2 class="text-2xl font-semibold mb-6 text-gray-900">Edit Visi & Misi</h2>

    <form action="/visi-misi/{{visi_misi.id}}?_method=PUT" method="post" enctype="multipart/form-data" class="space-y-6">

      <div>
        <label for="visi" class="block text-sm font-semibold text-gray-700 mb-1">Visi</label>
        <input 
          type="text" 
          id="visi" 
          name="visi" 
          value="{{visi_misi.visi}}" 
          class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700">
      </div>

      <div>
        <label for="misi" class="block text-sm font-semibold text-gray-700 mb-1">Misi</label>
        <input 
          type="text" 
          id="misi" 
          name="misi" 
          value="{{visi_misi.misi}}" 
          class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700">
      </div>

      <div class="flex gap-3">
        <button type="submit" class="bg-gray-900 text-white px-6 py-2 rounded-lg shadow hover:bg-gray-600 transition">
          Update
        </button>
        <a href="/visi-misi"
          class="px-6 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
          Cancel
        </a>
      </div>
    </form>
  </div>
</div>
