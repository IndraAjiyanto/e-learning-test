<div class="pt-28 py-20">
  <div class="max-w-2xl mx-auto px-6 py-10 bg-white rounded-xl shadow-lg">
    <h2 class="text-2xl font-semibold mb-6 text-gray-900">Create new users</h2>

    <form action="/users" method="post" class="space-y-6" enctype="multipart/form-data">

 <div x-data="{ previewUrl: null }" class="space-y-3">
  <label for="profile" class="block text-sm font-medium text-gray-700 mb-1">
    Photos Profile
  </label>
  <input 
    type="file" 
    id="profile" 
    name="profile" 
    accept="image/*" 
    x-ref="fileInput"
    class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700"
    @change="previewUrl = $event.target.files[0] ? URL.createObjectURL($event.target.files[0]) : null"
  >

  <template x-if="previewUrl">
    <div class="relative w-32 h-32">
      <img 
        :src="previewUrl" 
        alt="Preview Photos" 
        class="w-32 h-32 object-cover rounded-lg border border-gray-300"
      >

      <button 
        type="button" 
        class="absolute -top-2 -right-2 bg-red-500 text-white w-6 h-6 rounded-full flex items-center justify-center shadow hover:bg-red-600"
        @click="previewUrl = null; $refs.fileInput.value = null;">
        &times;
      </button>
    </div>
  </template>
</div>


      <div>
        <label for="username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
        <input type="text" id="username" name="username" class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700">
      </div>

      <div>
        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <input type="email" id="email" name="email" class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700">
      </div>

      <div>
        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
        <input type="password" id="password" name="password" class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700">
      </div>

<div>
  <label for="role" class="block text-sm font-medium text-gray-700 mb-1">Role</label>
  <select name="role" id="role" 
    class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700">
    
    <option value="" selected disabled>-- Select Role --</option>
    <option value="admin">Admin</option>
    <option value="user">User</option>
    <option value="super_admin">Super Admin</option>
  </select>
</div>


      <div class="flex gap-3">
        <button type="submit" class="bg-gray-900 text-white px-6 py-2 rounded-lg shadow hover:bg-gray-600 transition">
          Create
        </button>
        <a href="/users"
          class="px-6 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
          Cancel
        </a>
      </div>
    </form>
  </div>
</div>