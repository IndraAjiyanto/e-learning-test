<div class="pt-28 py-20">
  <div class="max-w-2xl mx-auto px-6 py-10 bg-white rounded-xl shadow-lg">
    <h2 class="text-2xl font-semibold mb-6 text-gray-900">Create New Class Type</h2>

    <form action="/jenis-kelas/{{jenis_kelas.id}}?_method=PATCH" method="post" class="space-y-6">

      <div>
        <label for="nama_jenis_kelas" class="block text-sm font-medium text-gray-700 mb-1">
          Class Type Name
        </label>
        <input type="text" id="nama_jenis_kelas" name="nama_jenis_kelas" 
          placeholder="e.g. Regular, Premium, Online" value="{{jenis_kelas.nama_jenis_kelas}}"
          class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 
                 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700">
      </div>

      <div class="flex gap-3">
        <button type="submit" 
          class="bg-gray-900 text-white px-6 py-2 rounded-lg shadow hover:bg-gray-600 transition">
          Create
        </button>
        <a href="/jenis-kelas"
          class="px-6 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
          Cancel
        </a>
      </div>
    </form>
  </div>
</div>
