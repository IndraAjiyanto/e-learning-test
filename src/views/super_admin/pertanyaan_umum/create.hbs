<div class="pt-28 py-20">
  <div class="max-w-2xl mx-auto px-6 py-10 bg-white rounded-xl shadow-lg">
    <h2 class="text-2xl font-semibold mb-6 text-gray-900">Create FAQ</h2>

    <form action="/pertanyaan-umum" method="post" class="space-y-6">

      <!-- Question -->
      <div>
        <label for="pertanyaan" class="block text-sm font-semibold text-gray-700 mb-1">
          Question
        </label>
        <textarea 
          id="pertanyaan" 
          name="pertanyaan" 
          rows="4"
          class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700"
          placeholder="Write your question here..."></textarea>
      </div>

      <!-- Answer -->
      <div>
        <label for="jawaban" class="block text-sm font-semibold text-gray-700 mb-1">
          Answer
        </label>
        <textarea 
          id="jawaban" 
          name="jawaban" 
          rows="4"
          class="w-full border bg-white border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900 text-gray-700"
          placeholder="Write your answer here..."></textarea>
      </div>

      <!-- Action buttons -->
      <div class="flex gap-3">
        <button type="submit" 
          class="bg-gray-900 text-white px-6 py-2 rounded-lg shadow hover:bg-gray-600 transition">
          Create
        </button>
        <a href="/pertanyaan-umum"
          class="px-6 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
          Cancel
        </a>
      </div>
    </form>
  </div>
</div>
