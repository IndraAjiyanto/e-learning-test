<div 
  x-data="{
      tab: 'free class',
      categories: ['free class','course','bootcamp'],
      currentPage: 1,
      itemsPerPage: 5,

      get filteredKelas() {
          // ambil semua card kelas berdasarkan kategori
          return [...$refs.kelasList.children].filter(
              el => el.dataset.kategori === this.tab
          )
      },

      get totalPages() {
          return Math.ceil(this.filteredKelas.length / this.itemsPerPage)
      },

      paginatedKelas(el) {
          const idx = this.filteredKelas.indexOf(el)
          return idx >= (this.currentPage - 1) * this.itemsPerPage &&
                 idx < this.currentPage * this.itemsPerPage
      }
  }"
  class="bg-gray-900 py-16 px-6 lg:px-20"
  x-init="$watch('tab', () => currentPage = 1)"
>
    <!-- Title -->
    <div class="text-center mb-10">
        <h2 class="text-3xl md:text-4xl font-bold text-white max-w-2xl mx-auto">
            Launch a new career in as little as 6 months
