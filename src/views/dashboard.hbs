    </div>

    <!-- Tabs -->
    <div class="flex flex-wrap justify-center gap-3 mb-10">
        <template x-for="category in categories" :key="category">
            <button 
                class="btn btn-outline hover:bg-white hover:text-gray-900 px-8 transition-colors"
                :class="tab === category 
                    ? 'bg-white text-gray-900' 
                    : 'text-white border-white'"
                @click="tab = category"
                x-text="category.charAt(0).toUpperCase() + category.slice(1)">
            </button>
        </template>
    </div>

    <!-- Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6" x-ref="kelasList">
      {{#each kelas}}
      <div 
          class="card bg-white shadow-lg border rounded-xl overflow-hidden transition-all duration-300"
          data-kategori="{{kategori.nama_kategori}}"
          x-show="tab === '{{kategori.nama_kategori}}' && paginatedKelas($el)"
          x-transition
      >
          <figure class="px-6 pt-6">
            <img src="{{gambar}}" alt="{{nama_kelas}}" class="rounded-xl h-40 w-full object-cover">
          </figure>

          <div class="card-body">
            <div class="flex gap-2 mb-2">
              <span class="badge badge-outline px-2 py-1 text-xs">{{kategori.nama_kategori}}</span>
            </div>
            <h2 class="card-title text-gray-900 text-lg">{{nama_kelas}}</h2>
            <p class="text-base font-semibold text-gray-900">{{formatRupiah harga}}</p>
            <p class="text-sm text-gray-600 line-clamp-2">{{deskripsi}}</p>
            <div class="card-actions justify-end mt-4">
              <a href="/kelass/{{id}}" class="btn btn-outline w-full hover:bg-gray-900 hover:text-white text-gray-900 transition-colors">View Class</a>
            </div>
          </div>
      </div>
      {{/each}}
    </div>

    <!-- Pagination -->
    <div class="flex justify-center gap-2 mt-10" x-show="totalPages > 1">
        <!-- Prev -->
        <button 
          class="btn btn-sm btn-outline text-white border-white" 
          @click="if(currentPage > 1) currentPage--">
          Prev
        </button>

        <!-- Page Numbers -->
        <template x-for="page in totalPages" :key="page">
            <button 
                class="btn btn-sm"
                :class="page === currentPage ? 'btn-active' : 'btn-outline text-white border-white'"
                @click="currentPage = page"
                x-text="page">
            </button>
        </template>

        <!-- Next -->
        <button 
          class="btn btn-sm btn-outline text-white border-white" 
          @click="if(currentPage < totalPages) currentPage++">
          Next
        </button>
    </div>

