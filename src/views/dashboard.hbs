<section class="bg-gray-100 min-h-screen flex items-center" x-data="{ search: '' }">
    <div class="container mx-auto px-4 text-center">
        <h1 class="text-5xl font-bold mb-6 text-gray-900">
            {{#if user}}
            Welcome {{user.username}}
            {{else}}
            Welcome to Kesatria Academy
            {{/if}}
        </h1>
        <p class="text-xl mb-8 max-w-2xl mx-auto text-gray-700">
            Program edukasi IT Development dan Artificial Intelligence dengan course dan bootcamp berkualitas untuk dunia kerja.
        </p>
        <a href="{{#if user}}#courses{{else}}/login{{/if}}" 
           class="inline-block bg-gray-900 text-white px-8 py-3 rounded-lg font-semibold hover:bg-gray-700 transition transform hover:scale-105">
            Mulai Belajar
        </a>
    </div>
</section>

<section class="py-16 bg-white">
    <div class="container mx-auto px-4 ">
        <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">Teknologi yang Dipelajari</h2>
        <div class="flex justify-center gap-8 flex-wrap">
            <div class="bg-gray-50 p-6 rounded-lg transition transform hover:scale-105">
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/html5/html5-original.svg" 
                     alt="HTML" class="w-16 h-16 mx-auto mb-2">
            </div>
            <div class="bg-gray-50 p-6 rounded-lg transition transform hover:scale-105">
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/javascript/javascript-original.svg" 
                     alt="JavaScript" class="w-16 h-16 mx-auto mb-2">
            </div>
            <div class="bg-gray-50 p-6 rounded-lg transition transform hover:scale-105">
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/nodejs/nodejs-original.svg" 
                     alt="Node.js" class="w-16 h-16 mx-auto mb-2">
            </div>
            <div class="bg-gray-50 p-6 rounded-lg transition transform hover:scale-105">
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/python/python-original.svg" 
                     alt="Python" class="w-16 h-16 mx-auto mb-2">
            </div>
            <div class="bg-gray-50 p-6 rounded-lg transition transform hover:scale-105">
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/react/react-original.svg" 
                     alt="React" class="w-16 h-16 mx-auto mb-2">
            </div>
        </div>
    </div>
</section>

<section id="courses" class="py-16 bg-gray-100" x-data="{ search: '' }">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">Pilih Kelas</h2>
        
        <div class="max-w-md mx-auto mb-12">
            <div class="relative">
                <input type="text" 
                       x-model="search"
                       placeholder="Cari kelas..." 
                       class="w-full px-4 py-3 pr-12 rounded-lg border border-gray-300 focus:ring-2 focus:ring-gray-900 focus:outline-none">
                <button class="absolute right-0 top-0 bottom-0 bg-gray-900 text-white px-4 rounded-r-lg hover:bg-gray-700 transition">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </button>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
            {{#each kelas}}
            <div 
                class="bg-white rounded-lg shadow-md overflow-hidden transition transform hover:scale-105"
                x-data="{ text: '{{nama_kelas}} {{deskripsi}}'.toLowerCase() }"
                x-show="text.includes(search.toLowerCase())"
            >
                <img src="/uploads/images/{{gambar}}" 
                     alt="{{nama_kelas}}" 
                     class="w-full h-48 object-cover">
                <div class="p-6">
                    <h3 class="text-xl font-semibold mb-3 text-gray-800">{{nama_kelas}}</h3>
                    <p class="text-gray-600 mb-4 text-sm">{{deskripsi}}</p>
                    <a href="/kelass/{{id}}" 
                       class="inline-block w-full text-center bg-gray-900 text-white py-2 px-4 rounded hover:bg-gray-700 transition">
                        Lihat Detail
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
