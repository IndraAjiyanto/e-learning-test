<nav class="flex items-center justify-between px-6 py-4 border-b bg-gray-900 text-white shadow-sm">
  <div class="flex items-center gap-2">
    <img src="/image/logo.png" alt="Logo" class="h-6 w-6" />
    <span class="text-lg font-semibold">E-Learning</span>
  </div>

  {{#if (roles user.role "user")}}
  <div class="hidden md:flex items-center gap-4 flex-1 ml-10">
    <a href="/kelass/kelas_saya/{{user.id}}" class="text-sm text-gray-300 hover:text-white">My Course</a>
  </div>

  
<div x-data="{ open: false }" class="relative">
  <button @click="open = !open"
          class="flex items-center gap-2 px-3 py-2 text-sm font-medium text-white bg-gray-800 rounded hover:bg-gray-700 transition duration-200">
    {{user.username}}
    <svg :class="{ 'rotate-180': open }" class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path d="M19 9l-7 7-7-7" />
    </svg>
  </button>

  <div x-show="open"
       x-transition
       @click.away="open = false"
       class="absolute right-0 mt-2 w-44 bg-white rounded-lg shadow-lg z-50">
      <a href="/logout" class="block px-4 py-2 hover:bg-red-50 text-red-600 hover:text-red-700 transition">
        Logout
      </a>
    </div>
  </div>
</div>


  {{else if (roles user.role "super_admin")}}
  <div class="hidden md:flex items-center gap-4 flex-1 ml-10">
    <a href="/users" class="text-sm text-gray-300 hover:text-white">Users</a>
  </div>

  
<div x-data="{ open: false }" class="relative">
  <button @click="open = !open"
          class="flex items-center gap-2 px-3 py-2 text-sm font-medium text-white bg-gray-800 rounded hover:bg-gray-700 transition duration-200">
    {{user.username}}
    <svg :class="{ 'rotate-180': open }" class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path d="M19 9l-7 7-7-7" />
    </svg>
  </button>

  <div x-show="open"
       x-transition
       @click.away="open = false"
       class="absolute right-0 mt-2 w-44 bg-white rounded-lg shadow-lg z-50">
      <a href="/logout" class="block px-4 py-2 hover:bg-red-50 text-red-600 hover:text-red-700 transition">
        Logout
      </a>
    </div>
  </div>
</div>
  {{else if (roles user.role "admin")}}
  <div class="hidden md:flex items-center gap-4 flex-1 ml-10">
    <a href="/kelass" class="text-sm text-gray-300 hover:text-white">Kelas</a>
    <a href="/pertemuans" class="text-sm text-gray-300 hover:text-white">Pertemuan</a>
  </div>
  
<div x-data="{ open: false }" class="relative">
  <button @click="open = !open"
          class="flex items-center gap-2 px-3 py-2 text-sm font-medium text-white bg-gray-800 rounded hover:bg-gray-700 transition duration-200">
    {{user.username}}
    <svg :class="{ 'rotate-180': open }" class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path d="M19 9l-7 7-7-7" />
    </svg>
  </button>

  <div x-show="open"
       x-transition
       @click.away="open = false"
       class="absolute right-0 mt-2 w-44 bg-white rounded-lg shadow-lg z-50">
      <a href="/logout" class="block px-4 py-2 hover:bg-red-50 text-red-600 hover:text-red-700 transition">
        Logout
      </a>
    </div>
  </div>
</div>
  {{else}}
  <div class="flex items-center gap-4">
    <a href="/login" class="text-sm text-gray-300 hover:text-white">Log In</a>
    {{!-- <a href="/registrasi" class="px-4 py-2 bg-blue-600 text-white rounded text-sm hover:bg-blue-700">
      Sign Up
    </a> --}}
  </div>
  {{/if}}
</nav>
