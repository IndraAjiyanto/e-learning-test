<div x-data="{ selectedKelas: '{{pertemuan.kelasId}}' }" class="max-w-2xl mx-auto px-6 py-10 bg-white rounded-xl shadow-lg">
  <h2 class="text-2xl font-semibold mb-6">Edit Pertemuan</h2>

  <form method="POST" action="/pertemuans/{{pertemuan.id}}?_method=PATCH" class="space-y-6">
    
    <div>
      <label for="kelasId" class="block text-sm font-medium text-gray-700 mb-1">Pilih Kelas</label>
      <select name="kelasId" id="kelasId" x-model="selectedKelas"
        class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900">
        {{#each kelas}}
        <option value="{{id}}">{{nama_kelas}}</option>
        {{/each}}
      </select>
    </div>

    <div>
      <label for="topik" class="block text-sm font-medium text-gray-700 mb-1">Topik</label>
      <textarea id="topik" name="topik" rows="3"
        class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900">{{pertemuan.topik}}</textarea>
    </div>

    <div>
      <label for="tanggal" class="block text-sm font-medium text-gray-700 mb-1">Tanggal</label>
      <input type="date" id="tanggal" name="tanggal" required
        class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-900"
        value="{{formDate pertemuan.tanggal}}">
    </div>

    <div class="flex space-x-4">
      <button type="submit"
        class="bg-gray-900 text-white px-6 py-2 rounded-lg shadow hover:bg-gray-600 transition">
        Perbarui
      </button>
      <a href="/pertemuans"
        class="px-6 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
        Batal
      </a>
    </div>
  </form>
</div>