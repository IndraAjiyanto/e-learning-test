<div class="max-w-5xl mx-auto px-6 py-10">
  <div class="mb-6 flex justify-between items-center">
    <h2 class="text-2xl font-semibold">Daftar Pertemuan</h2>
    <a href="/pertemuans/formCreate" class="bg-gray-900 text-white px-4 py-2 rounded-lg shadow hover:bg-gray-600 transition">
      Tambah Pertemuan
    </a>
  </div>

  <div class="overflow-x-auto bg-white shadow-lg rounded-xl">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">No</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Pertemuan ke</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">topik</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">tanggal</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Kelas</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Aksi</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        {{#each pertemuan}}
        <tr class="hover:bg-gray-50 transition">
          <td class="px-6 py-4 text-sm text-gray-800">{{@index}}</td>
          <td class="px-6 py-4 text-sm text-gray-800">{{pertemuan_ke}}</td>
          <td class="px-6 py-4 text-sm text-gray-800">{{topik}}</td>
          <td class="px-6 py-4 text-sm text-gray-800">{{formatTanggal tanggal}}</td>
          <td class="px-6 py-4 text-sm text-gray-800">{{kelas.nama_kelas}}</td>
          <td class="px-6 py-4 text-sm text-gray-800 space-x-2">
            <a href="/pertemuans/formEdit/{{id}}" class="text-blue-600 hover:underline">Edit</a>
            <form action="/pertemuans/{{id}}/{{kelas.id}}?_method=DELETE" method="post" class="inline">
              <button type="submit" class="text-red-600 hover:underline">Hapus</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>


