<div class="max-w-7xl mx-auto px-4 pt-28 bg-gray-50 sm:px-6 lg:px-8 py-12">
    
    <!-- Header -->
    <div class="text-center mb-12">
        <div class="inline-block px-4 py-2 bg-gray-900/10 backdrop-blur-sm rounded-full mb-4">
            <span class="text-gray-900 text-sm font-medium">{{portfolio.kelas.nama_kelas}}</span>
        </div>
        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-4">
            {{portfolio.judul}}
        </h1>
      <div class="w-24 h-1 bg-gradient-to-r from-slate-400 to-slate-600 mx-auto rounded-full"></div>
    </div>

    <!-- Alpine.js Image Slider -->
    <div class="mb-12" 
         x-data="{
            currentSlide: 0,
            images: [{{#each portfolio.gambar}}'{{this}}',{{/each}}],
            autoSlideInterval: null,
            init() { this.startAutoSlide(); },
            startAutoSlide() { 
                this.autoSlideInterval = setInterval(() => this.next(), 5000); 
            },
            stopAutoSlide() { clearInterval(this.autoSlideInterval); },
            restartAutoSlide() { this.stopAutoSlide(); this.startAutoSlide(); },
            next() { this.currentSlide = (this.currentSlide + 1) % this.images.length; },
            prev() { this.currentSlide = (this.currentSlide - 1 + this.images.length) % this.images.length; },
            goToSlide(index) { this.currentSlide = index; this.restartAutoSlide(); }
         }" 
         class="relative group">

        <!-- Slider Container -->
        <div class="relative overflow-hidden rounded-2xl shadow-2xl max-w-4xl mx-auto aspect-[16/9]">
            
            <!-- Images -->
            <template x-for="(image, index) in images" :key="index">
                <div x-show="currentSlide === index"
                     x-transition:enter="transition ease-out duration-500"
                     x-transition:enter-start="opacity-0 transform translate-x-full"
                     x-transition:enter-end="opacity-100 transform translate-x-0"
                     x-transition:leave="transition ease-in duration-500"
                     x-transition:leave-start="opacity-100 transform translate-x-0"
                     x-transition:leave-end="opacity-0 transform -translate-x-full"
                     class="absolute inset-0 flex items-center justify-center">
                    <img 
                        :src="image" 
                        :alt="'Slide ' + (index + 1)" 
                        class="max-h-[500px] w-auto object-contain rounded-xl shadow-lg"
                    >
                </div>
            </template>

            <!-- Navigation Buttons -->
            <button @click="prev(); restartAutoSlide();" 
                    class="absolute left-4 top-1/2 -translate-y-1/2 w-12 h-12 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300 hover:bg-white hover:scale-110 shadow-lg z-10">
                <svg class="w-6 h-6 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </button>
            
            <button @click="next(); restartAutoSlide();" 
                    class="absolute right-4 top-1/2 -translate-y-1/2 w-12 h-12 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300 hover:bg-white hover:scale-110 shadow-lg z-10">
                <svg class="w-6 h-6 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </button>

            <!-- Dots Indicator -->
            <div class="absolute bottom-4 left-1/2 -translate-x-1/2 flex gap-2 z-10">
                <template x-for="(image, index) in images" :key="index">
                    <button @click="goToSlide(index)"
                            :class="currentSlide === index ? 'w-8 bg-white' : 'w-2 bg-white/50 hover:bg-white/75'"
                            class="h-2 rounded-full transition-all duration-300">
                    </button>
                </template>
            </div>

            <!-- Image Counter -->
            <div class="absolute top-4 right-4 px-3 py-1 bg-gray-900/80 backdrop-blur-sm rounded-full z-10">
                <span class="text-white text-sm font-medium" x-text="(currentSlide + 1) + ' / ' + images.length"></span>
            </div>
        </div>
    </div>

    <!-- Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
        
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-8">
            
            <!-- Technologies -->
            <div class="bg-white rounded-2xl p-8 shadow-xl">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">Technologies Used</h2>
                <div class="flex flex-wrap gap-3">
                    {{#each portfolio.teknologi}}
                    <span class="px-4 py-2 bg-gray-900 text-white rounded-lg font-medium hover:bg-gray-800 transition-colors duration-200 cursor-pointer">{{this}}</span>
                    {{/each}}
                </div>
            </div>

            <!-- Project Details -->
            <div class="bg-white rounded-2xl p-8 shadow-xl">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">Project Overview</h2>
                <div class="space-y-4 text-gray-700 leading-relaxed">
                    <p>
            {{portfolio.deskripsi}}

                       </p>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex gap-4" 
                 x-data="{ 
                    viewDemo() { alert('Opening live demo...'); },
                    viewGithub() { alert('Opening GitHub repository...'); }
                 }">
                <button @click="viewDemo()" 
                        class="flex-1 bg-gradient-to-r from-slate-600 to-slate-800 hover:from-slate-500 hover:to-slate-700 text-white px-6 py-4 rounded-xl font-semibold hover:bg-gray-800 transition-all duration-200 flex items-center justify-center gap-2 shadow-lg hover:shadow-xl hover:-translate-y-0.5">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                    View Live Demo
                </button>
                <button @click="viewGithub()" 
                        class="flex-1 bg-white text-gray-900 px-6 py-4 rounded-xl font-semibold hover:bg-gray-100 border-slate-300 hover:border-slate-400 transition-all duration-200 flex items-center justify-center gap-2 shadow-lg hover:shadow-xl hover:-translate-y-0.5">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                    View on GitHub
                </button>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
            
            <!-- Student Profile Card -->
            <div class="bg-white rounded-2xl p-6 shadow-xl">
                <h3 class="text-xl font-bold text-gray-900 mb-6">Student Profile</h3>
                
                <div class="flex items-center gap-4 mb-6">
                    <div class="w-20 h-20 rounded-full bg-gradient-to-br from-gray-700 to-gray-900 flex items-center justify-center overflow-hidden ring-4 ring-gray-100">
                        <img src="{{portfolio.user.profile}}" alt="Sarah Johnson" class="w-full h-full object-cover">
                    </div>
                    <div>
                        <h4 class="text-lg font-bold text-gray-900">{{portfolio.user.biodata.nama_lengkap}}</h4>
                        <p class="text-gray-600 font-medium">{{portfolio.user.email}}</p>
                    </div>
                </div>
                
                <div class="space-y-4">
                    <div class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg">
                        <svg class="w-5 h-5 text-gray-700 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                        </svg>
                        <div>
                            <p class="text-sm font-semibold text-gray-700">Course Completed</p>
                            <p class="text-gray-900 font-medium">{{portfolio.kelas.nama_kelas}}</p>
                        </div>
                    </div>
                    
                    <div class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg">
                        <svg class="w-5 h-5 text-gray-700 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <div>
                            <p class="text-sm font-semibold text-gray-700">Completion Date</p>
                            <p class="text-gray-900 font-medium">March 15, 2024</p>
                        </div>
                    </div>
                    
                    <div class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg">
                        <svg class="w-5 h-5 text-gray-700 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div>
                            <p class="text-sm font-semibold text-gray-700">Project Duration</p>
                            <p class="text-gray-900 font-medium">6 weeks</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
