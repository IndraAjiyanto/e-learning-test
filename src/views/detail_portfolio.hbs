<div class="max-w-7xl mx-auto px-4 pt-28 bg-gray-50 sm:px-6 lg:px-8 py-12">
    
    <!-- Header -->
    <div class="text-center mb-16">
        <div class="inline-flex items-center gap-2 px-6 py-3 bg-white/80 backdrop-blur-sm rounded-full mb-6 shadow-lg border border-slate-200">
            <i class="fas fa-graduation-cap text-slate-600"></i>
            <span class="text-slate-700 font-semibold">{{portfolio.kelas.nama_kelas}}</span>
        </div>
        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6 leading-tight">
            {{portfolio.judul}}
        </h1>
    </div>

    <!-- Alpine.js Image Slider -->
    <div class="mb-16" 
         x-data="{
            currentSlide: 0,
            images: [{{#each portfolio.gambar}}'{{this}}',{{/each}}],
            autoSlideInterval: null,
            init() { this.startAutoSlide(); },
            startAutoSlide() { 
                this.autoSlideInterval = setInterval(() => this.next(), 5000); 
            },
            stopAutoSlide() { clearInterval(this.autoSlideInterval); },
            restartAutoSlide() { this.stopAutoSlide(); this.startAutoSlide(); },
            next() { this.currentSlide = (this.currentSlide + 1) % this.images.length; },
            prev() { this.currentSlide = (this.currentSlide - 1 + this.images.length) % this.images.length; },
            goToSlide(index) { this.currentSlide = index; this.restartAutoSlide(); }
         }" 
         class="relative group">

        <!-- Slider Container -->
        <div class="relative overflow-hidden rounded-2xl shadow-2xl max-w-3xl mx-auto aspect-[16/9] bg-white/50 backdrop-blur-sm border border-white/20">
            
            <!-- Images -->
            <template x-for="(image, index) in images" :key="index">
                <div x-show="currentSlide === index"
                     x-transition:enter="transition ease-out duration-500"
                     x-transition:enter-start="opacity-0 transform translate-x-full"
                     x-transition:enter-end="opacity-100 transform translate-x-0"
                     x-transition:leave="transition ease-in duration-500"
                     x-transition:leave-start="opacity-100 transform translate-x-0"
                     x-transition:leave-end="opacity-0 transform -translate-x-full"
                     class="absolute inset-0 flex items-center justify-center p-8">
                    <img 
                        :src="image" 
                        :alt="'Slide ' + (index + 1)" 
                        class="max-h-[300px] w-auto object-contain rounded-lg shadow-md"
                    >
                </div>
            </template>

            <!-- Navigation Buttons -->
            <button @click="prev(); restartAutoSlide();" 
                    class="absolute left-4 top-1/2 -translate-y-1/2 w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300 hover:bg-white hover:scale-110 shadow-lg z-10 border border-slate-200">
                <svg class="w-5 h-5 text-slate-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </button>
            
            <button @click="next(); restartAutoSlide();" 
                    class="absolute right-4 top-1/2 -translate-y-1/2 w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300 hover:bg-white hover:scale-110 shadow-lg z-10 border border-slate-200">
                <svg class="w-5 h-5 text-slate-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </button>

            <!-- Dots Indicator -->
            <div class="absolute bottom-4 left-1/2 -translate-x-1/2 flex gap-2 z-10">
                <template x-for="(image, index) in images" :key="index">
                    <button @click="goToSlide(index)"
                            :class="currentSlide === index ? 'w-6 bg-slate-600' : 'w-2 bg-white/60 hover:bg-white/90'"
                            class="h-2 rounded-full transition-all duration-300">
                    </button>
                </template>
            </div>

            <!-- Image Counter -->
            <div class="absolute top-4 right-4 px-3 py-1 bg-slate-800/80 backdrop-blur-sm rounded-full z-10">
                <span class="text-white text-sm font-medium" x-text="(currentSlide + 1) + ' / ' + images.length"></span>
            </div>
        </div>

        <!-- Thumbnail Navigation -->
        <div class="flex justify-center gap-3 mt-4">
            <template x-for="(image, index) in images" :key="index">
                <button @click="goToSlide(index)"
                        :class="currentSlide === index ? 
                               'ring-2 ring-slate-600 ring-offset-2 scale-105' : 
                               'opacity-60 hover:opacity-100'"
                        class="transition-all duration-200 rounded-lg overflow-hidden">
                    <img :src="image" 
                         :alt="'Thumbnail ' + (index + 1)"
                         class="w-16 h-12 object-cover rounded-lg">
                </button>
            </template>
        </div>
    </div>

    <!-- Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
        
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-8">
            
            <!-- Technologies -->
            <div class="bg-white rounded-2xl p-8 shadow-xl">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">Technologies Used</h2>
                <div class="flex flex-wrap gap-3">
                    {{#each portfolio.teknologi}}
                    <span class="px-3 py-1 bg-gradient-to-r from-gray-50 to-gray-100 text-gray-700 rounded-full text-sm font-medium border border-gray-200 hover:from-gray-100 hover:to-gray-200 transition-all">{{this}}</span>
                    {{/each}}
                </div>
            </div>

            <!-- Project Details -->
            <div class="bg-white rounded-2xl p-8 shadow-xl">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">Project Overview</h2>
                <div class="space-y-4 text-gray-700 leading-relaxed">
                    <p>
            {{portfolio.deskripsi}}

                       </p>
                </div>
            </div>

            <!-- Action Buttons -->
<div class="flex flex-col sm:flex-row gap-4 w-full" 
     x-data="{ 
        viewDemo() { alert('Opening live demo...'); },
        viewGithub() { alert('Opening GitHub repository...'); }
     }">
    <button @click="viewDemo()" 
            class="w-full sm:flex-1 btn text-xl bg-gradient-to-r from-slate-700 to-slate-900 text-white hover:from-slate-600 hover:to-slate-800 px-8  border-0 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 text-center">
        View Live Demo
    </button>
    <button @click="viewGithub()" 
            class="w-full sm:flex-1 btn text-xl bg-white hover:bg-slate-50 text-slate-800 hover:text-slate-900 px-8  border-0 hover:border-slate-400 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 text-center">
        View on GitHub
    </button>
</div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
            
            <!-- Student Profile Card -->
            <div class="bg-white rounded-2xl p-6 shadow-xl">
                <h3 class="text-xl font-bold text-gray-900 mb-6">Student Profile</h3>
                
                <div class="flex items-center gap-4 mb-6">
                    <div class="w-20 h-20 rounded-full bg-gradient-to-br from-gray-700 to-gray-900 flex items-center justify-center overflow-hidden ring-4 ring-gray-100">
                        <img src="{{portfolio.user.profile}}" alt="Sarah Johnson" class="w-full h-full object-cover">
                    </div>
                    <div>
                        <h4 class="text-lg font-bold text-gray-900">{{portfolio.user.biodata.nama_lengkap}}</h4>
                        <p class="text-gray-600 font-medium">{{portfolio.user.email}}</p>
                    </div>
                </div>
                
                <div class="space-y-4">
                    <div class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg">
                        <svg class="w-5 h-5 text-gray-700 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                        </svg>
                        <div>
                            <p class="text-sm font-semibold text-gray-700">Course Completed</p>
                            <p class="text-gray-900 font-medium">{{portfolio.kelas.nama_kelas}}</p>
                        </div>
                    </div>
                    
                    <div class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg">
                        <svg class="w-5 h-5 text-gray-700 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <div>
                            <p class="text-sm font-semibold text-gray-700">Completion Date</p>
                            <p class="text-gray-900 font-medium">March 15, 2024</p>
                        </div>
                    </div>
                    
                    <div class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg">
                        <svg class="w-5 h-5 text-gray-700 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div>
                            <p class="text-sm font-semibold text-gray-700">Project Duration</p>
                            <p class="text-gray-900 font-medium">6 weeks</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>