<div class="max-w-5xl mx-auto px-6 py-10 pt-28">
  <div class="mb-8 flex items-center gap-6">
    <div class="relative">
      <img src="/uploads/images/{{user.profile}}" alt="Foto Profil"
           class="w-28 h-28 rounded-full border-4 border-base-300 shadow" />

      <label for="profile-upload"
             class="absolute bottom-0 right-0 bg-white rounded-full p-1 shadow cursor-pointer hover:bg-gray-100 transition">
        <svg xmlns="http://www.w3.org/2000/svg"
             class="h-5 w-5 text-gray-600"
             fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15.232 5.232l3.536 3.536M9 11l6.586-6.586
                   a2 2 0 012.828 0l1.172 1.172a2 2 0 010 2.828L13 15
                   m-4 0h4m-4 0v4m0-4H5m4 0v-4" />
        </svg>
      </label>
      <form action="/users/update/profile/{{user.id}}?_method=PATCH" method="post" enctype="multipart/form-data">
        <input id="profile-upload" type="file" name="profile" accept="image/*" class="hidden" onchange="this.form.submit()" />
      </form>
    </div>

    <div>
      <h1 class="text-3xl font-bold mb-1">{{user.username}}</h1>
      <p class="text-gray-600">{{user.email}}</p>
    </div>
  </div>

  <div class="mb-10">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-2xl font-semibold">Informasi Akun</h2>
      <div class="flex gap-2">
        <a href="/users/profile/info_akun" class="bg-gray-900 text-white px-4 py-2 rounded-lg shadow hover:bg-gray-600 transition">Edit Info</a>
        <a href="/users/profile/password" class="bg-gray-900 text-white px-4 py-2 rounded-lg shadow hover:bg-gray-600 transition">Ganti Password</a>
      </div>
    </div>

    <div class="card bg-base-200 shadow-lg">
      <div class="card-body grid grid-cols-1 sm:grid-cols-2 gap-6">
        <div>
          <p class="text-sm text-gray-500">Username</p>
          <p class="text-lg font-medium">{{user.username}}</p>
        </div>
        <div>
          <p class="text-sm text-gray-500">Email</p>
          <p class="text-lg font-medium">{{user.email}}</p>
        </div>

        {{#if (roles user.role "user")}}
          {{#if user.biodata}}
            <div>
              <p class="text-sm text-gray-500">Nama Lengkap</p>
              <p class="text-lg font-medium">{{user.biodata.nama_lengkap}}</p>
            </div>
            <div>
              <p class="text-sm text-gray-500">No</p>
              <p class="text-lg font-medium">{{user.biodata.no}}</p>
            </div>
            <div>
              <p class="text-sm text-gray-500">Jenis Kelamin</p>
              <p class="text-lg font-medium">{{user.biodata.jenis_kelamin}}</p>
            </div>
            <div>
              <p class="text-sm text-gray-500">Domisili Kota/Kabupaten</p>
              <p class="text-lg font-medium">{{user.biodata.kota}}</p>
            </div>
            <div>
              <p class="text-sm text-gray-500">Pendidikan Terakhir</p>
              <p class="text-lg font-medium">{{user.biodata.pendidikan}}</p>
            </div>
            <div>
              <p class="text-sm text-gray-500">Program Studi</p>
              <p class="text-lg font-medium">{{user.biodata.program_studi}}</p>
            </div>
          {{else}}
            <a href="/biodatas/create" class="btn btn-sm bg-gray-900 text-white  hover:bg-gray-700">Lengkapi Biodata</a>
            <div>
              <p class="text-sm text-gray-500">Nama Lengkap</p>
              <p class="text-lg font-medium">belum ada</p>
            </div>
            <div>
              <p class="text-sm text-gray-500">Pendidikan</p>
              <p class="text-lg font-medium">belum ada</p>
            </div>
            <div>
              <p class="text-sm text-gray-500">Program Studi</p>
              <p class="text-lg font-medium">belum ada</p>
            </div>
            <div>
              <p class="text-sm text-gray-500">Kota</p>
              <p class="text-lg font-medium">belum ada</p>
            </div>
          {{/if}}
        {{/if}}
      </div>
    </div>
  </div>

  {{#if (roles user.role "user")}}
  <div class="mb-10">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-2xl font-semibold">Portofolio</h2>
    </div>
    <div class="card bg-base-200 shadow-lg">
      <div class="card-body">
        <p class="text-gray-600">Kamu belum menambahkan portofolio.</p>
      </div>
    </div>
  </div>
  {{/if}}
</div>
