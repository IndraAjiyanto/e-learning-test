<div class="max-w-5xl mx-auto px-6 py-10 pt-28">
  <div class="mb-8">
    <img src="/uploads/images/{{kelas.gambar}}" 
     alt="Web Dev" 
     class="w-full max-w-md h-auto object-contain rounded shadow mb-4" />
    <h1 class="text-3xl font-bold mb-2">{{kelas.nama_kelas}}</h1>
    <p class="text-gray-700 mb-4">{{kelas.deskripsi}}</p>
  </div>

<div class="mb-10">
  <h2 class="text-2xl font-semibold mb-6">Materi Kelas</h2>

  <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
    <a href="/materis/pdf/{{kelas.id}}" class="card bg-gradient-to-r from-gray-900 to-gray-700 text-white shadow-lg rounded-xl p-6 flex flex-col items-center text-center transition transform hover:scale-105 hover:shadow-2xl">
      <span class="text-lg font-semibold">Materi PDF</span>
    </a>

    <a href="/materis/video/{{kelas.id}}" class="card bg-gradient-to-r from-gray-900 to-gray-700 text-white shadow-lg rounded-xl p-6 flex flex-col items-center text-center transition transform hover:scale-105 hover:shadow-2xl">
      <span class="text-lg font-semibold">Materi Video</span>
    </a>

    <a href="/materis/ppt/{{kelas.id}}" class="card bg-gradient-to-r from-gray-900 to-gray-700 text-white shadow-lg rounded-xl p-6 flex flex-col items-center text-center transition transform hover:scale-105 hover:shadow-2xl">
      <span class="text-lg font-semibold">Materi PPT</span>
    </a>
  </div>
</div>

<div class="mb-10">
  <h2 class="text-2xl font-semibold mb-4">Pertemuan</h2>

<ul class="list bg-base-100 rounded-box shadow-md p-4">

{{#each pertemuan}}
  {{#if (hasUserAbsen absen ../user.id)}}
    <li class="list-row p-2 rounded-lg bg-gray-100 shadow flex justify-between items-center">
      <div>
        <div class="font-semibold">Pertemuan {{pertemuan_ke}} - {{topik}}</div>
        <div class="text-xs text-gray-500">{{formatTanggal tanggal}}</div>
        <div class="text-xs text-gray-500">{{formatTime waktu_awal}} - {{formatTime waktu_akhir}}</div>
      </div>
      <span class="badge badge-success">Sudah Absen</span>
    </li>
  {{else}}
    <li class="list-row p-2 rounded-lg bg-gray-100 shadow flex justify-between items-center">
      <div>
        <div class="font-semibold">Pertemuan {{pertemuan_ke}} - {{topik}}</div>
        <div class="text-xs text-gray-500">{{formatTanggal tanggal}}</div>
        <div class="text-xs text-gray-500">{{formatTime waktu_awal}} - {{formatTime waktu_akhir}}</div>
      </div>
      <a href="/absens/form/{{id}}" class="badge badge-error">
        Belum Absen
      </a>
    </li>
  {{/if}}
{{/each}}


</ul>

</div>

</div>