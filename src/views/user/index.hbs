
<a href="/users/formCreate">tambah user</a>
<div class="overflow-x-auto">
  <table class="min-w-full bg-white border border-gray-200 rounded-lg">
    <thead class="bg-gray-100">
      <tr>
        <th class="text-left px-6 py-3 border-b">No</th>
        <th class="text-left px-6 py-3 border-b">Nama</th>
        <th class="text-left px-6 py-3 border-b">Email</th>
        <th class="text-left px-6 py-3 border-b">Role</th>
        <th class="text-left px-6 py-3 border-b">Active</th>
        <th class="text-left px-6 py-3 border-b">Aksi</th>
      </tr>
    </thead>
    <tbody>
        {{#each users}}
      <tr class="hover:bg-gray-50">
        <td class="px-6 py-4 border-b">1</td>
        <td class="px-6 py-4 border-b">{{username}}</td>
        <td class="px-6 py-4 border-b">{{email}}</td>
        <td class="px-6 py-4 border-b">{{role}}</td>
        <td class="px-6 py-4 border-b">{{isActive}}</td>
        <td class="px-6 py-4 border-b">
          <a href="/users/formEdit/{{id}}" class="text-blue-600 hover:underline">Edit</a>
          <form action="/users/{{id}}?_method=DELETE" method="post">
          <button type="submit" class="text-blue-600 hover:underline">Hapus</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>