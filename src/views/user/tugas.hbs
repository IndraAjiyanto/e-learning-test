<div class="mt-6 p-6 pt-28 bg-gray-50 border rounded-xl shadow-inner space-y-6">
  <div>
    <h3 class="text-lg font-semibold text-gray-900 mb-3">Assignment Material</h3>
    <div class="overflow-hidden rounded-lg border shadow bg-white">
      <iframe 
        src="https://mozilla.github.io/pdf.js/web/viewer.html?file={{tugas.file}}" 
        class="w-full h-[450px]" 
        type="application/pdf"
      ></iframe>
    </div>
  </div>

  {{#if jawabanExists.length}}
  {{else}}
  <div>
    <h3 class="text-lg font-semibold text-gray-900 mb-3">Submit Your Answer</h3>
    <p class="text-sm text-gray-600 mb-4">
      Enter a GitHub link, Google Drive, or any online file.
    </p>
    <form 
      action="/jawaban-tugass/{{tugas.id}}/{{tugas.pertemuan.id}}" 
      method="POST" 
      class="flex gap-3"
    >
      <input 
        type="text" 
        name="file" 
        placeholder="https://drive.google.com/..." 
        class="flex-1 px-4 py-2 border rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-gray-900"
      >
   
      <button 
        type="submit" 
        class="px-5 py-2 bg-gradient-to-r from-gray-900 to-gray-700 text-white rounded-lg shadow hover:scale-105 transform transition"
      >
        Submit
      </button>
    </form>
  </div>
  {{/if}}

  <div>
    <h3 class="text-lg font-semibold text-gray-900 mb-3">Your Answer</h3>
    {{#if jawaban_tugas.length}}
      <ul class="space-y-4">
        {{#each jawaban_tugas}}
          <li class="p-4 bg-white border rounded-lg shadow hover:shadow-md transition">
            <div class="flex items-center justify-between mb-3">
              <a 
                href="{{this.file}}" 
                target="_blank"
                class="text-blue-600 font-medium hover:underline truncate max-w-xs"
              >
                {{this.file}}
              </a>
              <span class="text-xs text-gray-500">
                {{formatTanggal this.createdAt}}
              </span>
            </div>
            <span class="inline-block px-3 py-1 text-xs font-medium rounded-full 
              {{#if (roles this.proses 'acc')}} bg-green-100 text-green-700
              {{else if (roles this.proses 'proces')}} bg-yellow-100 text-yellow-700 
              {{else if (roles this.proses 'rejected')}}bg-red-100 text-red-700{{/if}}">
              {{this.proses}}
            </span>
            {{#if this.komentar}}
              {{#each komentar}}
                <div class="mt-3 p-3 bg-gray-100 border rounded-lg">
                  <p class="text-sm text-gray-800">{{this.komentar}}</p>
                </div>
              {{/each}}
            {{/if}}
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p class="text-sm text-gray-500 italic">No answer has been submitted yet.</p>
    {{/if}}
  </div>

  <!-- Back button -->
  <div class="pt-4">
    <a href="/kelass/{{tugas.pertemuan.minggu.kelas.id}}" 
       class="inline-block px-5 py-2 bg-gray-200 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-300 transition">
      ‚Üê Back
    </a>
  </div>
</div>
