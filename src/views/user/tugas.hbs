<div class="mt-6 p-6 pt-28 bg-gradient-to-br from-slate-50 to-white border border-slate-200 rounded-xl shadow-lg space-y-8">
  <div>
    <h3 class="text-xl font-bold bg-gradient-to-r from-slate-900 to-slate-700 bg-clip-text text-transparent mb-4">Assignment Material</h3>
    <div class="overflow-hidden rounded-xl border border-slate-200 shadow-lg bg-white hover:shadow-xl transition-shadow duration-300">
      <iframe 
        src="https://mozilla.github.io/pdf.js/web/viewer.html?file={{tugas.file}}" 
        class="w-full h-[450px]" 
        type="application/pdf"
      ></iframe>
    </div>
  </div>

  {{#if jawabanExists.length}}
  {{else}}
  <div class="bg-white p-6 rounded-xl border border-slate-200 shadow-md">
    <h3 class="text-xl font-bold bg-gradient-to-r from-slate-900 to-slate-700 bg-clip-text text-transparent mb-3">Submit Your Answer</h3>
    <p class="text-sm text-slate-600 mb-6">
      Enter a GitHub link, Google Drive, or any online file sharing link.
    </p>
    <form 
      action="/jawaban-tugass/{{tugas.id}}/{{tugas.pertemuan.id}}" 
      method="POST" 
      class="flex gap-4"
    >
      <input 
        type="text" 
        name="file" 
        placeholder="https://drive.google.com/..." 
        class="flex-1 px-4 py-3 border border-slate-300 rounded-lg bg-white text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-500 transition-colors"
      >
   
      <button 
        type="submit" 
        class="px-6 py-3 bg-gradient-to-r from-slate-900 to-slate-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl hover:scale-105 transform transition-all duration-200"
      >
        Submit
      </button>
    </form>
  </div>
  {{/if}}

  <div class="bg-white p-6 rounded-xl border border-slate-200 shadow-md">
    <h3 class="text-xl font-bold bg-gradient-to-r from-slate-900 to-slate-700 bg-clip-text text-transparent mb-4">Your Answer</h3>
    {{#if jawaban_tugas.length}}
      <ul class="space-y-4">
        {{#each jawaban_tugas}}
          <li class="p-5 bg-gradient-to-r from-slate-50 to-white border border-slate-200 rounded-xl shadow-sm hover:shadow-md transition-all duration-200">
            <div class="flex items-center justify-between mb-4">
              <a 
                href="{{this.file}}" 
                target="_blank"
                class="text-slate-700 font-semibold hover:text-slate-900 hover:underline truncate max-w-xs transition-colors"
              >
                {{this.file}}
              </a>
              <span class="text-xs text-slate-500 bg-slate-100 px-2 py-1 rounded-full">
                {{formatTanggal this.createdAt}}
              </span>
            </div>
            <span class="inline-block px-4 py-2 text-xs font-semibold rounded-full shadow-sm
              {{#if (roles this.proses 'acc')}} bg-gradient-to-r from-emerald-100 to-green-100 text-emerald-700 border border-emerald-200
              {{else if (roles this.proses 'proces')}} bg-gradient-to-r from-amber-100 to-yellow-100 text-amber-700 border border-amber-200
              {{else if (roles this.proses 'rejected')}} bg-gradient-to-r from-red-100 to-rose-100 text-red-700 border border-red-200{{/if}}">
              {{this.proses}}
            </span>
            {{#if this.komentar}}
              {{#each komentar}}
                <div class="mt-4 p-4 bg-gradient-to-r from-slate-100 to-slate-50 border border-slate-200 rounded-lg">
                  <div class="flex items-start gap-3">
                    <div class="w-2 h-2 bg-slate-400 rounded-full mt-2 flex-shrink-0"></div>
                    <p class="text-sm text-slate-700 leading-relaxed">{{this.komentar}}</p>
                  </div>
                </div>
              {{/each}}
            {{/if}}
          </li>
        {{/each}}
      </ul>
    {{else}}
      <div class="text-center py-8">
        <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <p class="text-sm text-slate-500 italic">No answer has been submitted yet.</p>
      </div>
    {{/if}}
  </div>

  <div class="pt-4">
    <a href="/kelass/{{tugas.pertemuan.minggu.kelas.id}}" 
       class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-slate-200 to-slate-100 text-slate-700 font-semibold rounded-lg hover:from-slate-300 hover:to-slate-200 hover:shadow-md transition-all duration-200">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Class
    </a>
  </div>
</div>
