<div class="bg-gradient-to-br from-slate-50 via-white to-slate-100 min-h-screen pt-28 py-20">
  <div class="max-w-7xl mx-auto px-6">
    <div class="bg-white rounded-2xl shadow-2xl p-10 border border-slate-200">
<div class="flex justify-start mb-8">
  <a href="/kelass/{{tugas.pertemuan.minggu.kelas.id}}" 
     class="inline-flex items-center gap-3 px-6 py-3 rounded-xl border border-slate-300 shadow-lg hover:shadow-xl text-slate-700 hover:bg-slate-50 hover:border-slate-400 transition-all duration-300 font-semibold text-base transform hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
    </svg>
    Back to Class
  </a>
</div>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        
        <!-- Kolom Kiri: Assignment Material -->
        <div class="space-y-6">
          <div class="bg-gradient-to-br from-white to-slate-50 p-6 rounded-2xl border border-slate-200 shadow-lg">
            <div class="flex items-center mb-4">
              <h4 class="text-xl text-gray-900 font-bold">Assignment Material</h4>
            </div>
            <div class="overflow-hidden rounded-xl border border-slate-200 shadow-sm bg-white">
              <iframe 
                src="https://mozilla.github.io/pdf.js/web/viewer.html?file={{tugas.file}}" 
                class="w-full h-[500px] border-0" 
                type="application/pdf"
              ></iframe>
            </div>
          </div>

          <!-- Submit Answer Form -->

        </div>

        <!-- Kolom Kanan: Your Answer -->
        <div class="space-y-6">
                    {{#if jawabanExists.length}}
          {{else}}
          <div class="bg-gradient-to-br from-white to-slate-50 p-6 rounded-2xl border border-slate-200 shadow-lg">
            <div class="flex items-center mb-4">
              <h4 class="text-xl text-gray-900 font-bold">Submit Your Answer</h4>
            </div>
            <p class="text-sm text-slate-600 mb-4 leading-relaxed">
              Enter a GitHub link, Google Drive, or any online file sharing link.
            </p>
            <form 
              action="/jawaban-tugass/{{tugas.id}}/{{tugas.pertemuan.id}}" 
              method="POST" 
              class="space-y-4"
            >
              <input 
                type="text" 
                name="file" 
                placeholder="https://drive.google.com/..." 
                required
                class="w-full px-4 py-3 border border-slate-300 rounded-xl bg-white text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-500 transition-all duration-300 hover:bg-white"
              >
              <button 
                type="submit" 
                class="w-full px-6 py-3 bg-gradient-to-r from-slate-700 to-slate-900 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl hover:from-slate-600 hover:to-slate-800 transition-all duration-300 transform hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2"
              >
                Submit Answer
              </button>
            </form>
          </div>
          {{/if}}
          <div class="bg-gradient-to-br from-white to-slate-50 p-6 rounded-2xl border border-slate-200 shadow-lg ">
            <div class="flex items-center mb-4">
              <h4 class="text-xl text-gray-900 font-bold">Your Answer</h4>
            </div>
            
            {{#if jawaban_tugas.length}}
              <div class="space-y-4 max-h-[500px] overflow-y-auto pr-2">
                {{#each jawaban_tugas}}
                  <div class="p-5 bg-white border border-slate-200 rounded-xl shadow-sm hover:shadow-md transition-all duration-300">
                    <div class="flex flex-col gap-3 mb-4">
                      <a 
                        href="{{this.file}}" 
                        target="_blank"
                        class="text-base text-slate-700 font-semibold hover:text-slate-900 hover:underline transition-colors break-words"
                      >
                        {{this.file}}
                      </a>
                      <span class="text-xs text-slate-500 bg-slate-100 px-2 py-1 rounded-full font-medium self-start">
                        {{formatTanggal this.createdAt}}
                      </span>
                    </div>
                    
                    <div class="flex flex-wrap items-center gap-3">
                      <span class="inline-flex items-center px-3 py-1 text-xs font-semibold rounded-full
                        {{#if (roles this.proses 'acc')}} 
                          bg-gradient-to-r from-emerald-50 to-green-50 text-emerald-700 border border-emerald-200
                        {{else if (roles this.proses 'proces')}} 
                          bg-gradient-to-r from-amber-50 to-yellow-50 text-amber-700 border border-amber-200
                        {{else if (roles this.proses 'rejected')}} 
                          bg-gradient-to-r from-red-50 to-rose-50 text-red-700 border border-red-200
                        {{/if}}">
                        {{#if (roles this.proses 'acc')}}
                          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                          </svg>
                          Approved
                        {{else if (roles this.proses 'proces')}}
                          <svg class="w-3 h-3 mr-1 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                          </svg>
                          Under Review
                        {{else if (roles this.proses 'rejected')}}
                          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                          </svg>
                          Needs Revision
                        {{/if}}
                      </span>
                    </div>

                    {{#if this.komentar}}
                      <div class="mt-4 space-y-2">
                        {{#each komentar}}
                          <div class="p-3 bg-gradient-to-r from-slate-50 to-slate-100 border border-slate-200 rounded-lg">
                            <div class="flex items-start gap-2">
                              <div class="w-1.5 h-1.5 bg-slate-400 rounded-full mt-2 flex-shrink-0"></div>
                              <div class="flex-1">
                                <p class="text-sm text-slate-700 leading-relaxed">{{this.komentar}}</p>
                                {{#if this.createdAt}}
                                  <p class="text-xs text-slate-500 mt-1">{{formatTanggal this.createdAt}}</p>
                                {{/if}}
                              </div>
                            </div>
                          </div>
                        {{/each}}
                      </div>
                    {{/if}}
                  </div>
                {{/each}}
              </div>
            {{else}}
              <div class="text-center py-8">
                <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                </div>
                <p class="text-base text-slate-500 font-medium">No answer has been submitted yet.</p>
                <p class="text-sm text-slate-400 mt-1">Submit your answer using the form on the left.</p>
              </div>
            {{/if}}
          </div>
        </div>
      </div>

      <!-- Back Button -->

    </div>
  </div>
</div>