<section id="courses" class="py-16 pt-28 bg-gray-100" x-data="{ search: '' }">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">My Courses</h2>
        
        <div class="max-w-md mx-auto mb-12">
            <div class="relative">
                <input type="text" 
                       x-model="search"
                       placeholder="Cari kelas..." 
                       class="w-full px-4 py-3 pr-12 rounded-lg border border-gray-300 focus:ring-2 focus:ring-gray-900 focus:outline-none">
                <button class="absolute right-0 top-0 bottom-0 bg-gray-900 text-white px-4 rounded-r-lg hover:bg-gray-700 transition">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </button>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
            {{#each kelas}}
            <div 
                class="bg-white rounded-lg shadow-md overflow-hidden transition transform hover:scale-105"
                x-data="{ text: '{{nama_kelas}} {{deskripsi}}'.toLowerCase() }"
                x-show="text.includes(search.toLowerCase())"
            >
                <img src="{{gambar}}" 
                     alt="{{nama_kelas}}" 
                     class="w-full h-48 object-cover">
                <div class="p-6">
                    <h3 class="text-xl font-semibold mb-3 text-gray-800">{{nama_kelas}}</h3>
                    <p class="text-gray-600 mb-4 text-sm">{{deskripsi}}</p>
                    <a href="/kelass/{{id}}" 
                       class="inline-block w-full text-center bg-gray-900 text-white py-2 px-4 rounded transform hover:scale-105 hover:bg-gray-700 transition">
                        Lihat Detail
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
