<div class="px-6 py-10 pt-28 bg-gray-50 min-h-screen">
  <h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">My Courses</h2>

  <div class="flex justify-center py-6">
    <label class="input input-bordered flex items-center gap-2 w-full max-w-md rounded-xl shadow-lg">
      <input type="text" class="grow focus:outline-none" placeholder="Cari kelas..." />
      <button class="btn bg-gray-900 btn-sm text-white rounded-lg hover:bg-gray-700 transition">Search</button>
    </label>
  </div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 p-8 justify-items-center">

{{#each kelas}}
  <div class="card bg-base-100 w-80 shadow-md hover:shadow-xl transition-all rounded-xl">
    <figure class="px-8 pt-8">
      <img src="/uploads/images/{{gambar}}"
        alt="Shoes" class="rounded-xl" />
    </figure>
    <div class="card-body items-center text-center">
      <h2 class="card-title text-gray-900">{{nama_kelas}}</h2>
      <p class="text-gray-700">{{deskripsi}}</p>
      <div class="card-actions">
          <a href="/kelass/{{id}}" class="btn bg-gray-900 text-white rounded-lg hover:bg-gray-700">View details</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>
</div>
