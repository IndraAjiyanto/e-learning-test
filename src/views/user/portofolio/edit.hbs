<div class="bg-gradient-to-br from-slate-50 via-white to-slate-100 min-h-screen py-20">
  <div class="max-w-6xl mx-auto px-6">
    <div class="bg-white rounded-2xl shadow-2xl p-10 border border-slate-200">
      <h2 class="text-4xl font-bold text-gray-900 mb-10 text-center">Edit Portfolio</h2>

      <form method="POST" action="/portfolios/{{portfolio.id}}?_method=PATCH" enctype="multipart/form-data">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          
          <!-- Kolom Kiri -->
          <div class="space-y-6">
            <!-- Judul Portfolio -->
            <div>
              <label for="judul" class="block text-lg font-semibold text-gray-700 mb-3">Portfolio Title</label>
              <input type="text" id="judul" name="judul" required placeholder="Enter portfolio title"
                value="{{portfolio.judul}}"
                class="w-full border text-gray-700 border-slate-300 rounded-xl px-5 py-4 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-400 transition-all duration-300 bg-white/70 hover:bg-white" />
            </div>

            <!-- Deskripsi -->
            <div>
              <label for="deskripsi" class="block text-lg font-semibold text-gray-700 mb-3">Description</label>
              <textarea name="deskripsi" id="deskripsi" required
                placeholder="Write a description..."
                rows="6"
                class="w-full text-gray-700 bg-white/70 border border-slate-300 rounded-xl px-5 py-4 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-400 transition-all duration-300 hover:bg-white resize-none">{{portfolio.deskripsi}}</textarea>
            </div>
          </div>

          <!-- Kolom Kanan -->
          <div class="space-y-6">
            <!-- Existing Images Section -->
            <div x-data="{ existingImages: {{#if portfolio.gambar}}{{json portfolio.gambar}}{{else}}[]{{/if}} }" class="space-y-4">
              <label class="block text-lg font-semibold text-gray-700 mb-3">
                Current Images
              </label>
              
              <template x-for="(url, index) in existingImages" :key="'existing-' + index">
                <div class="space-y-4">
                  <div class="flex items-center gap-4">
                    <div class="flex-1">
                      <div class="w-full border border-slate-300 rounded-xl px-5 py-4 bg-white/70 text-gray-700 flex items-center justify-between">
                        <div class="flex items-center gap-3">
                          <div class="relative">
                            <img :src="url" class="w-12 h-12 object-cover rounded-lg border-2 border-slate-200 shadow-sm" />
                            <div class="absolute -top-1 -right-1 w-4 h-4 bg-green-500 rounded-full flex items-center justify-center">
                              <svg class="w-2 h-2 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                              </svg>
                            </div>
                          </div>
                          <span class="text-sm font-medium text-slate-700">Existing Image</span>
                        </div>
                        <span class="text-xs text-slate-500 bg-slate-100 px-2 py-1 rounded">Saved</span>
                      </div>
                    </div>
                    <input type="hidden" name="gambar" :value="url">
                    <button type="button" @click="existingImages.splice(index, 1)" 
                    class="w-12 h-12 bg-red-500 hover:bg-red-600 text-white rounded-xl flex items-center justify-center transition-all duration-300 transform hover:scale-105 shadow-lg">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </template>
            </div>

            <!-- Upload Gambar Baru -->
            <div x-data="{ newFiles: [] }" class="space-y-4">
              
              <template x-for="(file, index) in newFiles" :key="index">
                <div class="space-y-4">
                  <div class="flex items-center gap-4">
                    <div class="flex-1">
                      <input 
                        type="file" 
                        name="gambar"
                        accept="image/*"
                        @change="const fileInput = $event.target;
                                if (fileInput.files && fileInput.files[0]) {
                                  file.preview = URL.createObjectURL(fileInput.files[0]);
                                }"
                        class="w-full border border-slate-300 rounded-xl px-5 py-4 bg-white/70 hover:bg-white focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-400 transition-all duration-300 text-gray-700 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-slate-100 file:text-slate-700 hover:file:bg-slate-200">
                    </div>

                    <button type="button" @click="newFiles.splice(index, 1)"
                      class="w-12 h-12 bg-red-500 hover:bg-red-600 text-white rounded-xl flex items-center justify-center transition-all duration-300 transform hover:scale-105 shadow-lg">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>

                  <!-- Image Preview -->
                  <template x-if="file.preview">
                    <div class="relative">
                      <div class="p-4 bg-slate-50 rounded-xl border border-slate-200">
                        <img 
                          :src="file.preview" 
                          alt="Image Preview" 
                          class="w-full max-w-xs h-48 object-cover rounded-lg border-2 border-slate-300 shadow-sm mx-auto"
                          @error="file.preview = null"
                        >
                        <button 
                          type="button" 
                          class="absolute -top-2 -right-2 bg-red-500 text-white w-8 h-8 rounded-full flex items-center justify-center shadow-lg hover:bg-red-600 transition-all duration-300 transform hover:scale-110"
                          @click="file.preview = null; $el.closest('.space-y-4').querySelector('input[type=file]').value = ''">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                          </svg>
                        </button>
                      </div>
                    </div>
                  </template>
                </div>
              </template>

              <!-- Add New Image Button -->
              <button type="button" @click="newFiles.push({ preview: null })"
                class="w-full border-2 border-dashed border-slate-300 rounded-xl px-6 py-4 text-slate-500 hover:border-slate-400 hover:text-slate-600 hover:bg-slate-50 flex items-center justify-center gap-2 transition-all duration-300 group">
                <svg class="w-5 h-5 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Add Image
              </button>
            </div>

            <!-- Technologies -->
            <div x-data="{ techs: {{#if portfolio.teknologi}}{{json portfolio.teknologi}}{{else}}['']{{/if}} }" class="space-y-4">
              <label class="block text-lg font-semibold text-gray-700 mb-3">
                Technologies
              </label>
              
              <template x-for="(tech, index) in techs" :key="index">
                <div class="space-y-4">
                  <div class="flex items-center gap-4">
                    <div class="flex-1">
                      <input type="text" x-model="techs[index]" name="teknologi[]" placeholder="Enter a technology (e.g., React, Node.js, Python)"
                        class="w-full border border-slate-300 rounded-xl px-5 py-4 bg-white/70 hover:bg-white focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-400 transition-all duration-300 text-gray-700">
                    </div>
                    <button type="button" @click="techs.splice(index,1)" x-show="techs.length > 1"
                      class="w-12 h-12 bg-red-500 hover:bg-red-600 text-white rounded-xl flex items-center justify-center transition-all duration-300 transform hover:scale-105 shadow-lg">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </template>
              
              <!-- Add Technology Button -->
              <button type="button" @click="techs.push('')"
                class="w-full border-2 border-dashed border-slate-300 rounded-xl px-6 py-4 text-slate-500 hover:border-slate-400 hover:text-slate-600 hover:bg-slate-50 flex items-center justify-center gap-2 transition-all duration-300 group">
                <svg class="w-5 h-5 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Add Technology
              </button>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex items-center gap-4 pt-10 mt-8 border-t border-slate-200">
          <button type="submit"
            class="bg-gradient-to-r from-slate-700 to-slate-900 text-white px-8 py-4 rounded-xl shadow-lg hover:shadow-xl hover:from-slate-600 hover:to-slate-800 transition-all duration-300 transform hover:-translate-y-1 font-semibold text-lg flex-1 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2">
            Update Portfolio
          </button>
          <a href="/kelass/{{portfolio.kelas.id}}"
            class="px-8 py-4 rounded-xl border border-slate-300 shadow-lg hover:shadow-xl text-slate-700 hover:bg-slate-50 hover:border-slate-400 transition-all duration-300 font-semibold text-lg flex-1 text-center transform hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2">
            Cancel
          </a>
        </div>
      </form>
    </div>
  </div>
</div>