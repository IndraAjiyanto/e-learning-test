<div class="pt-28 py-20">
  <div class="max-w-4xl mx-auto px-6 py-10 bg-white rounded-xl shadow-lg space-y-8 border border-slate-100">

    <div class="text-center space-y-4">
      <h2 class="text-4xl font-bold bg-gradient-to-r from-slate-900 via-slate-700 to-slate-900 bg-clip-text text-transparent">
        {{portfolio.judul}}
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-slate-400 to-slate-600 mx-auto rounded-full"></div>
    </div>

    <div class="bg-gradient-to-br from-slate-50 to-white p-6 rounded-xl border border-slate-100">
      <div class="flex items-center gap-2 mb-4">
        <div class="w-2 h-2 bg-slate-500 rounded-full"></div>
        <h3 class="text-xl font-semibold text-slate-800">Deskripsi</h3>
      </div>
      <p class="text-slate-600 leading-relaxed text-lg">
        {{portfolio.deskripsi}}
      </p>
    </div>

    <div class="bg-gradient-to-br from-slate-50 to-white p-6 rounded-xl border border-slate-100">
      <div class="flex items-center gap-2 mb-6">
        <div class="w-2 h-2 bg-slate-500 rounded-full"></div>
        <h3 class="text-xl font-semibold text-slate-800">Galeri Gambar</h3>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {{#each portfolio.gambar}}
          <div class="relative group overflow-hidden rounded-xl shadow-md hover:shadow-xl transition-all duration-300">
            <img src="{{this}}" alt="Portfolio Image"
              class="w-full h-48 object-cover cursor-pointer group-hover:scale-105 transition-transform duration-300">

            <a href="{{this}}" target="_blank"
              class="absolute inset-0 flex items-center justify-center bg-gradient-to-t from-slate-900/80 via-slate-900/40 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300 rounded-xl">
              <div class="bg-white/20 backdrop-blur-sm px-4 py-2 rounded-lg border border-white/30">
                <span class="text-white font-semibold flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
                  </svg>
                  View
                </span>
              </div>
            </a>
          </div>
        {{/each}}
      </div>
    </div>

    <div class="bg-gradient-to-br from-slate-50 to-white p-6 rounded-xl border border-slate-100">
      <div class="flex items-center gap-2 mb-6">
        <div class="w-2 h-2 bg-slate-500 rounded-full"></div>
        <h3 class="text-xl font-semibold text-slate-800">Technologies</h3>
      </div>
      <div class="flex flex-wrap gap-3">
        {{#each portfolio.teknologi}}
          <span class="px-4 py-2 bg-gradient-to-r from-slate-100 to-slate-200 text-slate-700 rounded-full text-sm font-medium border border-slate-200 hover:from-slate-200 hover:to-slate-300 transition-all duration-200 shadow-sm">
            {{this}}
          </span>
        {{/each}}
      </div>
    </div>

    <div class="flex justify-end space-x-4 pt-6">
      <a href="/portfolios/formEdit/{{portfolio.id}}"
        class="px-8 py-3 rounded-xl bg-gradient-to-r from-slate-800 to-slate-900 text-white hover:from-slate-700 hover:to-slate-800 transition-all duration-200 shadow-lg hover:shadow-xl font-medium flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Edit Portfolio
      </a>
      <a href="/kelass/{{kelasId}}"
        class="px-8 py-3 rounded-xl border-2 border-slate-300 text-slate-700 hover:bg-slate-50 hover:border-slate-400 transition-all duration-200 font-medium flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Class
      </a>
    </div>
  </div>
</div>
