<div class="pt-28 py-20">
  <div class="max-w-3xl mx-auto px-6 py-10 bg-white rounded-xl shadow-lg">
    <h2 class="text-2xl text-gray-900 font-semibold mb-6">Log Book Detail</h2>

    <div class="space-y-6">
      <!-- Activity -->
      <div>
        <p class="text-sm font-semibold text-gray-700">Activity</p>
        <p class="mt-1 text-gray-900">{{logbook.kegiatan}}</p>
      </div>

      <!-- Activity Details -->
      <div>
        <p class="text-sm font-semibold text-gray-700">Activity Details</p>
        <p class="mt-1 text-gray-900 whitespace-pre-line">{{logbook.rincian_kegiatan}}</p>
      </div>

      <!-- Obstacle -->
      <div>
        <p class="text-sm font-semibold text-gray-700">Obstacle</p>
        <p class="mt-1 text-gray-900">{{logbook.kendala}}</p>
      </div>

      <!-- Documentation -->
      <div>
        <p class="text-sm font-semibold text-gray-700">Photo Documentation</p>
        {{#if logbook.dokumentasi}}
          <img src="{{logbook.dokumentasi}}" alt="Dokumentasi" 
               class="mt-2 w-48 h-48 object-cover rounded-lg border border-gray-300 shadow">
        {{else}}
          <p class="mt-1 text-gray-500 italic">No documentation uploaded.</p>
        {{/if}}
      </div>

      <!-- User -->
      <div>
        <p class="text-sm font-semibold text-gray-700">User</p>
        <p class="mt-1 text-gray-900">{{user.username}}</p>
      </div>

      <!-- Status -->
      <div>
        <p class="text-sm font-semibold text-gray-700">Status</p>
        <span class="inline-block px-3 py-1 rounded-full text-sm font-medium 
          {{#if (roles logbook.proses 'acc')}}bg-green-100 text-green-700
          {{else if (roles logbook.proses 'rejected')}}bg-red-100 text-red-700
          {{else}}bg-gray-100 text-gray-700{{/if}}">
          {{logbook.proses}}
        </span>
      </div>
    </div>

    <!-- Back Button -->
    <div class="mt-8">
      <a href="/kelass/{{logbook.pertemuan.minggu.kelas.id}}" 
         class="px-6 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
        ‚Üê Back to Log Book
      </a>
    </div>
  </div>
</div>
