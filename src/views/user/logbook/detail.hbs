<div class="bg-gradient-to-br from-slate-50 via-white to-slate-100 min-h-screen py-20">
  <div class="max-w-4xl mx-auto px-6">
    <div class="bg-white rounded-2xl shadow-2xl p-10 border border-slate-200">
      <div class="flex justify-start mb-8">
  <a href="/kelass/{{logbook.pertemuan.minggu.kelas.id}}" 
     class="inline-flex items-center gap-3 px-6 py-3 rounded-xl border border-slate-300 shadow-lg hover:shadow-xl text-slate-700 hover:bg-slate-50 hover:border-slate-400 transition-all duration-300 font-semibold text-base transform hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
    </svg>
    Back to Class
  </a>
</div>
      <h2 class="text-4xl font-bold text-gray-900 mb-10 text-center">Log Book Detail</h2>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        
        <!-- Kolom Kiri -->
        <div class="space-y-6">
          <!-- Activity -->
          <div class="bg-gradient-to-br from-slate-50 to-white p-6 rounded-xl border border-slate-200 shadow-sm">
            <p class="text-lg font-semibold text-gray-700 mb-3">Activity</p>
            <p class="text-gray-900 text-lg leading-relaxed">{{logbook.kegiatan}}</p>
          </div>

          <!-- Activity Details -->
          <div class="bg-gradient-to-br from-slate-50 to-white p-6 rounded-xl border border-slate-200 shadow-sm">
            <p class="text-lg font-semibold text-gray-700 mb-3">Activity Details</p>
            <p class="text-gray-900 text-lg leading-relaxed whitespace-pre-line">{{logbook.rincian_kegiatan}}</p>
          </div>
        </div>

        <!-- Kolom Kanan -->
        <div class="space-y-6">
          <!-- Obstacle -->
          <div class="bg-gradient-to-br from-slate-50 to-white p-6 rounded-xl border border-slate-200 shadow-sm">
            <p class="text-lg font-semibold text-gray-700 mb-3">Obstacle</p>
            <p class="text-gray-900 text-lg leading-relaxed">{{logbook.kendala}}</p>
          </div>

          <!-- User -->
          <div class="bg-gradient-to-br from-slate-50 to-white p-6 rounded-xl border border-slate-200 shadow-sm">
            <p class="text-lg font-semibold text-gray-700 mb-3">User</p>
            <p class="text-gray-900 text-lg">{{user.username}}</p>
          </div>

          <!-- Status -->
          <div class="bg-gradient-to-br from-slate-50 to-white p-6 rounded-xl border border-slate-200 shadow-sm">
            <p class="text-lg font-semibold text-gray-700 mb-3">Status</p>
            <span class="inline-flex items-center px-4 py-2 rounded-full text-base font-semibold shadow-sm
              {{#if (roles logbook.proses 'acc')}} 
                bg-gradient-to-r from-emerald-50 to-green-50 text-emerald-700 border border-emerald-200
              {{else if (roles logbook.proses 'rejected')}} 
                bg-gradient-to-r from-red-50 to-rose-50 text-red-700 border border-red-200
              {{else}}
                bg-gradient-to-r from-slate-50 to-gray-50 text-slate-700 border border-slate-200
              {{/if}}">
              {{#if (roles logbook.proses 'acc')}}
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                Approved
              {{else if (roles logbook.proses 'rejected')}}
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
                Rejected
              {{else}}
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                {{logbook.proses}}
              {{/if}}
            </span>
          </div>
        </div>
      </div>

      <!-- Documentation Section (Full Width) -->
      <div class="mt-8 bg-gradient-to-br from-slate-50 to-white p-6 rounded-xl border border-slate-200 shadow-sm">
        <p class="text-lg font-semibold text-gray-700 mb-4">Photo Documentation</p>
        {{#if logbook.dokumentasi}}
          <div class="flex justify-center">
            <img src="{{logbook.dokumentasi}}" alt="Dokumentasi" 
                 class="w-64 h-64 object-cover rounded-xl border-2 border-slate-300 shadow-lg hover:shadow-xl transition-all duration-300">
          </div>
        {{else}}
          <div class="text-center py-8">
            <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
            <p class="text-lg text-slate-500 font-medium">No documentation uploaded.</p>
          </div>
        {{/if}}
      </div>

    </div>
  </div>
</div>