    <!-- FAQ Section -->
    <section class="py-16 bg-gray-100">
        <div class="container mx-auto px-4">
            <h2 class="text-4xl font-bold text-center mb-12 text-gray-800">Pertanyaan yang Sering Diajukan</h2>
            
            <div class="max-w-3xl mx-auto space-y-6">
