<div class="bg-gradient-to-br from-slate-50 via-white to-slate-100 min-h-screen py-20">
  <div class="max-w-4xl mx-auto px-6">
    <div class="bg-white rounded-2xl shadow-2xl p-10 border border-slate-200">
      <h2 class="text-4xl font-bold text-gray-900 mb-10 text-center">Lengkapi Biodata</h2>

      <form action="/biodatas" method="POST" x-data="{
        pendidikanOpen: false,
        selectedPendidikan: '',
        selectPendidikan(value) {
          this.selectedPendidikan = value;
          this.pendidikanOpen = false;
        }
      }">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          
          <!-- Kolom Kiri -->
          <div class="space-y-6">
            <!-- Nama Lengkap -->
            <div>
              <label for="nama_lengkap" class="block text-lg font-semibold text-gray-700 mb-3">Nama Lengkap</label>
              <input type="text" id="nama_lengkap" name="nama_lengkap" required
                class="w-full border text-gray-700 border-slate-300 rounded-xl px-5 py-4 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-400 transition-all duration-300 bg-white/70 hover:bg-white">
            </div>

            <!-- No WA -->
            <div>
              <label for="no" class="block text-lg font-semibold text-gray-700 mb-3">No WA</label>
              <input type="text" id="no" name="no" required
                class="w-full border text-gray-700 border-slate-300 rounded-xl px-5 py-4 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-400 transition-all duration-300 bg-white/70 hover:bg-white">
            </div>

            <!-- Jenis Kelamin (Radio) -->
            <div>
              <label class="block text-lg font-semibold text-gray-700 mb-3">Jenis Kelamin</label>
              <div class="flex flex-col gap-3">
                <label class="inline-flex items-center gap-3 cursor-pointer group">
                  <input type="radio" name="jenis_kelamin" value="Laki-laki" required
                    class="radio border-gray-700 checked:text-gray-700 checked:bg-white">
                  <span class="text-gray-700 text-lg group-hover:text-slate-900 transition-colors">Laki-laki</span>
                </label>
                <label class="inline-flex items-center gap-3 cursor-pointer group">
                  <input type="radio" name="jenis_kelamin" value="Perempuan" required
                    class="radio border-gray-700 checked:text-gray-700 checked:bg-white">
                  <span class="text-gray-700 text-lg group-hover:text-slate-900 transition-colors">Perempuan</span>
                </label>
              </div>
            </div>
          </div>

          <!-- Kolom Kanan -->
          <div class="space-y-6">
            <!-- Kota -->
            <div>
              <label for="kota" class="block text-lg font-semibold text-gray-700 mb-3">Kota</label>
              <input type="text" id="kota" name="kota" required
                class="w-full border text-gray-700 border-slate-300 rounded-xl px-5 py-4 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-400 transition-all duration-300 bg-white/70 hover:bg-white">
            </div>

            <!-- Pendidikan (Custom Dropdown) -->
            <div>
              <label class="block text-lg font-semibold text-gray-700 mb-3">Pendidikan</label>
              <div class="relative" x-data="{ open: false }">
                <!-- Hidden Input untuk Form -->
                <input type="hidden" name="pendidikan" :value="selectedPendidikan" required>
                
                <!-- Dropdown Trigger -->
                <button 
                  type="button"
                  @click="open = !open"
                  :class="selectedPendidikan ? 'text-gray-700' : 'text-gray-400'"
                  class="w-full border border-slate-300 rounded-xl px-5 py-4 bg-white hover:bg-white transition-all duration-300 text-left flex justify-between items-center focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-400"
                >
                  <span x-text="selectedPendidikan || 'Pilih pendidikan'"></span>
                  <svg 
                    viewBox="0 0 20 20" 
                    fill="currentColor" 
                    class="w-5 h-5 text-gray-500 transform transition-transform duration-300" 
                    :class="open ? 'rotate-180' : ''"
                  >
                    <path fill-rule="evenodd" d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
                  </svg>
                </button>
                
                <!-- Dropdown Menu -->
                <div 
                  x-show="open"
                  x-transition:enter="transition ease-out duration-200"
                  x-transition:enter-start="opacity-0 scale-95"
                  x-transition:enter-end="opacity-100 scale-100"
                  x-transition:leave="transition ease-in duration-150"
                  x-transition:leave-start="opacity-100 scale-100"
                  x-transition:leave-end="opacity-0 scale-95"
                  @click.outside="open = false"
                  class="absolute z-10 w-full mt-2 bg-white rounded-xl shadow-2xl border border-slate-200 overflow-hidden"
                >
                  <div class="py-2">
                    <button 
                      type="button"
                      @click="selectedPendidikan = 'SMP/Sederajat'; open = false;"
                      class="w-full text-left px-5 py-3 hover:bg-slate-50 transition-colors duration-200 text-gray-700 text-lg"
                    >
                      SMP/Sederajat
                    </button>
                    <button 
                      type="button"
                      @click="selectedPendidikan = 'SMA/SMK/Sederajat'; open = false;"
                      class="w-full text-left px-5 py-3 hover:bg-slate-50 transition-colors duration-200 text-gray-700 text-lg"
                    >
                      SMA/SMK/Sederajat
                    </button>
                    <button 
                      type="button"
                      @click="selectedPendidikan = 'Diploma(D3/D4)'; open = false;"
                      class="w-full text-left px-5 py-3 hover:bg-slate-50 transition-colors duration-200 text-gray-700 text-lg"
                    >
                      Diploma(D3/D4)
                    </button>
                    <button 
                      type="button"
                      @click="selectedPendidikan = 'Sarjana(S1)'; open = false;"
                      class="w-full text-left px-5 py-3 hover:bg-slate-50 transition-colors duration-200 text-gray-700 text-lg"
                    >
                      Sarjana(S1)
                    </button>
                  </div>
                </div>
              </div>
            </div>

            <!-- Program Studi -->
            <div>
              <label for="program_studi" class="block text-lg font-semibold text-gray-700 mb-3">Program Studi</label>
              <input type="text" id="program_studi" name="program_studi" required
                class="w-full border text-gray-700 border-slate-300 rounded-xl px-5 py-4 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-slate-400 transition-all duration-300 bg-white/70 hover:bg-white">
            </div>
          </div>
        </div>

        <!-- Tombol (Full Width di Bawah) -->
        <div class="flex items-center gap-4 pt-10 mt-8 border-t border-slate-200">
          <button type="submit"
            class="bg-gradient-to-r from-slate-700 to-slate-900 text-white px-8 py-4 rounded-xl shadow-lg hover:shadow-xl hover:from-slate-600 hover:to-slate-800 transition-all duration-300 transform hover:-translate-y-1 font-semibold text-lg flex-1 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2">
            Simpan Biodata
          </button>
          <a href="/users/profile"
            class="px-8 py-4 rounded-xl shadow-lg hover:shadow-xl  text-slate-700 hover:bg-slate-50 hover:border-slate-400 transition-all duration-300 font-semibold text-lg flex-1 transform hover:-translate-y-1 text-center focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2">
            Kembali ke Profil
          </a>
        </div>

      </form>
    </div>
  </div>
</div>