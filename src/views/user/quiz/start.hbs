<div class="pt-28">
<form 
  method="POST" 
  action="/jawaban-users/{{quizId}}" 
  class="space-y-8 max-w-3xl mx-auto"
>
  {{#each pertanyaan}}
  <div class="p-6 border border-gray-200 rounded-2xl bg-white shadow-sm hover:shadow-md transition">
    <!-- Nomor + Pertanyaan -->
    <p class="font-semibold text-gray-900 mb-4">
     {{pertanyaan_soal}}
    </p>

    <!-- Pilihan Jawaban -->
    <div class="space-y-3">
      {{#each jawaban}}
      <label class="flex items-center p-3 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50 transition">
        <input 
          type="radio" 
          name="q-{{../id}}"   
          value="{{id}}"       
          class="accent-gray-900 w-5 h-5"
        >
        <span class="ml-3 text-gray-900">{{jawaban}}</span>
      </label>
      {{/each}}
    </div>
  </div>
  {{/each}}

  <!-- Tombol Submit -->
  <div class="flex justify-end pt-6">
    <button 
      type="submit" 
      class="px-6 py-3 bg-gray-900 text-white rounded-lg shadow hover:bg-gray-800 hover:shadow-lg hover:scale-105 transition-transform"
    >
      Kirim Jawaban
    </button>
  </div>
</form>
</div>