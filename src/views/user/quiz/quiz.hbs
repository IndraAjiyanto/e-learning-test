<div class="max-w-3xl mx-auto px-6 py-10 pt-28">
  <!-- Header Quiz -->
  <div class="mb-8 text-center">
    <!-- Enhanced header with gradient text and better spacing -->
    <h1 class="text-4xl font-bold bg-gradient-to-r from-slate-900 via-slate-700 to-slate-900 bg-clip-text text-transparent mb-4">{{quiz.nama_quiz}}</h1>
  </div>

  <!-- Info Quiz -->
  <!-- Enhanced info card with gradient border and better styling -->
  <div class="bg-white shadow-xl rounded-2xl p-8 mb-8 border border-slate-100 hover:shadow-2xl transition-all duration-300">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="flex items-center space-x-3">
        <div class="w-12 h-12 bg-gradient-to-br from-slate-500 to-slate-700 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <div>
          <p class="text-slate-600 text-sm font-medium">Jumlah Pertanyaan</p>
          <p class="text-2xl font-bold text-slate-900">{{quiz.pertanyaan.length}}</p>
        </div>
      </div>
      <div class="flex items-center space-x-3">
        <div class="w-12 h-12 bg-gradient-to-br from-slate-500 to-slate-700 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div>
          <p class="text-slate-600 text-sm font-medium">Nilai Minimal</p>
          <p class="text-2xl font-bold text-slate-900">{{quiz.nilai_minimal}}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Tombol Kembali + Mulai Quiz -->
  <!-- Enhanced buttons with better styling and hover effects -->
  <div class="mb-8 flex flex-row justify-between items-center gap-4">
      <a href="/kelass/{{quiz.minggu.kelas.id}}" 
     class="inline-flex items-center gap-3 px-6 py-3 rounded-xl border border-slate-300 shadow-lg hover:shadow-xl text-slate-700 hover:bg-slate-50 hover:border-slate-400 transition-all duration-300 font-semibold text-lg transform hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
    </svg>
    Back to Class
  </a>
    <a href="/quiz/start/{{quiz.id}}" 
       class="bg-gradient-to-r from-slate-700 to-slate-900 text-white inline-flex items-center gap-3 px-6 py-3 rounded-xl shadow-lg hover:shadow-xl hover:from-slate-600 hover:to-slate-800 transition-all duration-300 transform hover:-translate-y-1 font-semibold text-lg  focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2">

      <span>Mulai Quiz</span>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
</svg>
    </a>
  </div>

  <!-- Riwayat Nilai -->
  <!-- Enhanced history section with better table styling and empty state -->
  <div class="bg-white shadow-xl rounded-2xl p-8 border border-slate-100">
    <div class="flex items-center space-x-3 mb-6">
      <div class="w-10 h-10 bg-gradient-to-br from-slate-500 to-slate-700 rounded-lg flex items-center justify-center">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
      </div>
      <h2 class="text-2xl font-bold text-slate-900">Riwayat Nilai</h2>
    </div>

    {{#if nilai.length}}
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr class="bg-gradient-to-r from-slate-50 to-slate-100 border-b border-slate-200">
              <th class="px-6 py-4 text-left text-sm font-semibold text-slate-700 uppercase tracking-wider rounded-tl-lg">Nilai</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-slate-700 uppercase tracking-wider rounded-tr-lg">Status</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100">
            {{#each nilai}}
            <tr class="hover:bg-slate-50 transition-colors duration-150">
              <td class="px-6 py-4">
                <span class="text-2xl font-bold text-slate-900">{{this.nilai}}</span>
              </td>
              <td class="px-6 py-4">
                {{#if (gte this.nilai ../quiz.nilai_minimal)}}
                  <span class="inline-flex items-center px-3 py-1 text-sm font-medium rounded-full bg-gradient-to-r from-emerald-100 to-green-100 text-emerald-800 border border-emerald-200">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Lulus
                  </span>
                {{else}}
                  <span class="inline-flex items-center px-3 py-1 text-sm font-medium rounded-full bg-gradient-to-r from-red-100 to-rose-100 text-red-800 border border-red-200">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    Tidak Lulus
                  </span>
                {{/if}}
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{else}}
      <div class="text-center py-12">
        <div class="w-20 h-20 bg-gradient-to-br from-slate-100 to-slate-200 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-10 h-10 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <p class="text-slate-500 text-lg font-medium mb-2">Belum ada percobaan quiz</p>
        <p class="text-slate-400">Mulai quiz pertama Anda untuk melihat riwayat nilai</p>
      </div>
    {{/if}}
  </div>
</div>
