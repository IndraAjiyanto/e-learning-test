<div class="max-w-3xl mx-auto px-6 py-10 pt-28">
  <!-- Header Quiz -->
  <div class="mb-8 text-center">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">{{quiz.nama_quiz}}</h1>
  </div>

  <!-- Info Quiz -->
  <div class="bg-white shadow rounded-xl p-6 mb-6">
    <p class="text-gray-700 mb-2">
      Jumlah Pertanyaan: <span class="font-semibold">{{quiz.pertanyaan.length}}</span>
    </p>
    <p class="text-gray-700 mb-2">
      Nilai Minimal: <span class="font-semibold">{{quiz.nilai_minimal}}</span>
    </p>
  </div>

  <!-- Tombol Kembali + Mulai Quiz -->
  <div class="mb-8 flex justify-between items-center">
    <a href="/kelass/{{quiz.minggu.kelas.id}}" 
       class="px-6 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
      ‚Üê Back
    </a>
    <a href="/quiz/start/{{quiz.id}}" 
       class="inline-block px-6 py-3 bg-gradient-to-r from-gray-900 to-gray-700 text-white font-medium rounded-lg shadow hover:scale-105 transform transition">
      Mulai Quiz
    </a>
  </div>

  <!-- Riwayat Nilai -->
  <div class="bg-white shadow rounded-xl p-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-4">Riwayat Nilai</h2>

    {{#if nilai.length}}
      <div class="overflow-x-auto">
        <table class="table w-full">
          <thead>
            <tr class="bg-gray-100 text-gray-700">
              <th class="px-4 py-2 text-left">Nilai</th>
              <th class="px-4 py-2 text-left">Status</th>
            </tr>
          </thead>
          <tbody>
            {{#each nilai}}
            <tr class="border-t">
              <td class="px-4 py-2">{{this.nilai}}</td>
              <td class="px-4 py-2">
                {{#if (gte this.nilai ../quiz.nilai_minimal)}}
                  <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-700">
                    Lulus
                  </span>
                {{else}}
                  <span class="px-2 py-1 text-xs font-medium rounded-full bg-red-100 text-red-700">
                    Tidak Lulus
                  </span>
                {{/if}}
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{else}}
      <p class="text-gray-500 italic">Belum ada percobaan quiz.</p>
    {{/if}}
  </div>
</div>
