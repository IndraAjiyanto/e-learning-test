<div class="max-w-7xl mx-auto px-4 py-10">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    
    <div class="col-span-2">
      <img src="/images/sample-video.jpg" alt="Course Thumbnail" class="rounded-lg w-full mb-4">
      <div class="flex justify-between items-center">
        <h1 class="text-3xl font-bold">Introduction to User Experience Design</h1>
      </div>
    </div>

    <div class="bg-gray-100 p-6 rounded-lg shadow">
      <h2 class="text-xl font-semibold mb-4">Materi Kelas</h2>
      <ul class="space-y-2">
        {{#each pertemuan}}
        <li x-data="{ open: false }" class="relative">
          <button @click="open = !open"
                  class="w-full text-left bg-white px-4 py-2 rounded shadow hover:bg-gray-50">
            {{topik}}
          </button>
          <div x-show="open"
               x-transition
               @click.away="open = false"
               class="mt-2 bg-white border rounded shadow w-full">
            <a href="#" class="block px-4 py-2 hover:bg-gray-100">Item 1</a>
            <a href="#" class="block px-4 py-2 hover:bg-gray-100">Item 2</a>
            <a href="#" class="block px-4 py-2 hover:bg-gray-100">Item 3</a>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>

  </div>
</div>
