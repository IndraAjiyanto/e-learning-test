<div class="max-w-7xl mx-auto px-4 py-10 pt-28" 
     x-data="{ pptSrc: '' }">
            <div class="mb-4">
    <a href="/kelass/{{kelasId}}" 
       class="inline-flex items-center text-gray-700 text-base font-semibold hover:underline">
      <svg xmlns="http://www.w3.org/2000/svg" 
           class="h-5 w-5 mr-1" fill="none" 
           viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M15 19l-7-7 7-7" />
      </svg>
      Kembali
    </a>
  </div>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    
    <div class="col-span-2">
      <iframe 
        class="h-[500px] w-full rounded-lg border" 
        x-bind:src="pptSrc" 
        frameborder="0">
      </iframe>

      <div class="flex justify-between items-center mt-4">
        <h1 class="text-3xl font-bold">Presentation Viewer</h1>
        <input type="text" x-bind:value="pptSrc" readonly class="border p-1 rounded w-1/2 text-sm">
      </div>
    </div>

    <div class="bg-gray-100 p-6 rounded-lg shadow">
      <h2 class="text-xl font-semibold mb-4">Materi Kelas</h2>
      <ul class="space-y-2">
        {{#each pertemuan}}
        <li x-data="{ open: false }" class="relative">
          <button @click="open = !open"
                  class="w-full text-left bg-white px-4 py-2 rounded shadow hover:bg-gray-50">
            {{topik}}
          </button>

          <div x-show="open"
               x-transition
               @click.away="open = false"
               class="mt-2 bg-white border rounded shadow w-full">
               
               {{#if materiPpt.length}}
               {{#each materiPpt}}
               <button  
                 class="block w-full text-left px-4 py-2 hover:bg-gray-100"
                 @click="
                   pptSrc = 'https://docs.google.com/viewer?url=' + encodeURIComponent('https://example.com/uploads/ppt/{{file}}') + '&embedded=true'
                 ">
                {{file}}
               </button>
               {{/each}}
               {{else}}
               <p class="px-4 py-2 text-gray-500">Belum ada materi</p>
               {{/if}}
          </div>
        </li>
        {{/each}}
      </ul>
    </div>

  </div>
</div>
