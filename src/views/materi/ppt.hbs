<div class="max-w-7xl mx-auto px-6 py-12 pt-28" 
     x-data="{ slides: [] }"
     x-init="initReveal()">

  <!-- Tombol kembali -->
  <div class="mb-8">
    <a href="/kelass/{{pertemuan.kelas.id}}" 
       class="inline-flex items-center text-blue-600 text-base font-medium hover:underline">
      â† Kembali
    </a>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">
    
    <!-- Slideshow Area -->
    <div class="col-span-2 bg-white rounded-2xl shadow-lg overflow-hidden">
      <div class="reveal">
        <div class="slides">
          <template x-for="slide in slides" :key="slide">
            <section>
              <img :src="slide" class="w-full h-[550px] object-contain bg-gray-50" />
            </section>
          </template>
        </div>
      </div>

      <!-- Placeholder kalau belum pilih -->
      <template x-if="slides.length === 0">
        <div class="flex items-center justify-center h-[550px] bg-gray-50 text-gray-400 text-lg">
          Pilih materi untuk melihat slide ğŸ“‘
        </div>
      </template>
    </div>

    <!-- Sidebar Materi -->
    <aside class="bg-gray-50 p-6 rounded-2xl shadow-md space-y-4">
      <h2 class="text-lg font-semibold text-gray-800 border-b pb-3">ğŸ“š Materi Kelas</h2>
      {{#if materi.length}}
        <ul class="space-y-2">
          {{#each materi}}
            <li>
              <button  
                class="w-full text-left px-4 py-3 rounded-lg bg-white shadow-sm hover:bg-blue-50 hover:text-blue-600 transition"
                @click="
                  slides = {{json this.slides}};
                  $nextTick(() => {
                    Reveal.sync();
                    Reveal.slide(0);
                  });
                "
              >
                {{judul}}
              </button>
            </li>
          {{/each}}
        </ul>
      {{else}}
        <p class="text-gray-500 italic">Belum ada materi tersedia</p>
      {{/if}}
    </aside>
  </div>
</div>
