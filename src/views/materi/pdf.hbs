<div class="max-w-7xl mx-auto px-4 py-10" 
     x-data="{ pdfSrc: '' }">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    
    <div class="col-span-2">
      <iframe 
        class="h-[500px] w-full rounded-lg border" 
        x-bind:src="pdfSrc" 
        type="application/pdf">
      </iframe>

      <div class="flex justify-between items-center mt-4">
        <h1 class="text-3xl font-bold">Introduction to User Experience Design</h1>
        <input type="text" x-bind:value="pdfSrc" readonly class="border p-1 rounded w-1/2 text-sm">
      </div>
    </div>

    <div class="bg-gray-100 p-6 rounded-lg shadow">
      <h2 class="text-xl font-semibold mb-4">Materi Kelas</h2>
      <ul class="space-y-2">
        {{#each pertemuan}}
        <li x-data="{ open: false }" class="relative">
          <button @click="open = !open"
                  class="w-full text-left bg-white px-4 py-2 rounded shadow hover:bg-gray-50">
            {{topik}}
          </button>

          <div x-show="open"
               x-transition
               @click.away="open = false"
               class="mt-2 bg-white border rounded shadow w-full">
               
               {{#if materiPdf.length}}
               {{#each materiPdf}}
               <button  
                 class="block w-full text-left px-4 py-2 hover:bg-gray-100"
                 @click="pdfSrc = '/uploads/pdf/{{file}}'">
                 ðŸ“„ {{file}}
               </button>
               {{/each}}
               {{else}}
               <p class="px-4 py-2 text-gray-500">Belum ada materi</p>
               {{/if}}
          </div>
        </li>
        {{/each}}
      </ul>
    </div>

  </div>
</div>
