    return {
        allAlumni: [
            {
                id: 1,
                nama: 'John Doe',
                profile: 'https://api.dicebear.com/7.x/avataaars/svg?seed=John',
                pesan: 'Program ini sangat membantu karir saya. Saya bisa langsung menerapkan ilmu yang dipelajari di dunia kerja.',
                kantor: 'Tech Company Indonesia',
                posisi_sekarang: 'Full Stack Developer',
                kelas: 'Full Stack Development',
            },
            {
                id: 2,
                nama: 'Jane Smith',
                profile: 'https://api.dicebear.com/7.x/avataaars/svg?seed=Jane',
                pesan: 'Mentor yang berpengalaman dan kurikulum yang relevan dengan industri membuat saya siap bekerja.',
                kantor: 'Data Analytics Corp',
                posisi_sekarang: 'Data Scientist',
                kelas: 'Data Science',
            },
            {
                id: 3,
                nama: 'Alex Johnson',
                profile: 'https://api.dicebear.com/7.x/avataaars/svg?seed=Alex',
                pesan: 'Dari nol sampai bisa membuat aplikasi mobile sendiri. Pengalaman belajar yang sangat berharga.',
                kantor: 'Mobile First Startup',
                posisi_sekarang: 'Mobile Developer',
                kelas: 'Mobile Development',
            },
            {
                id: 4,
                nama: 'Maria Garcia',
                profile: 'https://api.dicebear.com/7.x/avataaars/svg?seed=Maria',
                pesan: 'Project-based learning membuat saya memahami konsep AI dengan lebih mendalam dan praktis.',
                kantor: 'AI Research Lab',
                posisi_sekarang: 'AI Engineer',
                kelas: 'AI & Machine Learning',
            },
            {
                id: 5,
                nama: 'Sarah Williams',
                profile: 'https://api.dicebear.com/7.x/avataaars/svg?seed=Sarah',
                pesan: 'Belajar design thinking dan UX research mengubah cara saya mendesain produk digital.',
                kantor: 'Creative Design Studio',
                posisi_sekarang: 'UI/UX Designer',
                kelas: 'UI/UX Design',
            },
            {
                id: 6,
                nama: 'Michael Chen',
                profile: 'https://api.dicebear.com/7.x/avataaars/svg?seed=Michael',
                pesan: 'Infrastructure as code dan cloud computing skills yang saya dapat sangat dicari di industri.',
                kantor: 'Cloud Solutions Inc',
                posisi_sekarang: 'DevOps Engineer',
                kelas: 'DevOps',
            },
            {
                id: 7,
                nama: 'Emily Brown',
                profile: 'https://api.dicebear.com/7.x/avataaars/svg?seed=Emily',
                pesan: 'Pesan dari saya: Program ini memberikan fondasi yang kuat untuk karir di development.',
                kantor: 'Wiratek Solusi Asia',
                posisi_sekarang: 'iOS Developer',
                kelas: 'Full Stack Development',
            },
            {
                id: 8,
                nama: 'David Lee',
                profile: 'https://api.dicebear.com/7.x/avataaars/svg?seed=David',
                pesan: 'Networking dengan alumni dan mentor membuka banyak peluang karir untuk saya.',
                kantor: 'Enterprise Solutions',
                posisi_sekarang: 'Backend Engineer',
                kelas: 'Backend Development',
            }
        ],
        selectedKelas: '',
        currentPage: 1,
        itemsPerPage: 6,

        get kelasList() {
            return [...new Set(this.allAlumni.map(a => a.kelas))].filter(Boolean);
        },

        get filteredAlumni() {
            return this.allAlumni.filter(alumni => {
                return this.selectedKelas === '' || alumni.kelas === this.selectedKelas;
            });
        },

        get totalPages() {
            return Math.ceil(this.filteredAlumni.length / this.itemsPerPage);
        },

        get paginatedAlumni() {
            const start = (this.currentPage - 1) * this.itemsPerPage;
            const end = start + this.itemsPerPage;
            return this.filteredAlumni.slice(start, end);
        },

        resetFilters() {
            this.selectedKelas = '';
            this.currentPage = 1;
        }
    };
}
</script>