<div class="max-w-xl mx-auto px-6 py-10 bg-white rounded-lg shadow">
  <h1 class="text-2xl font-bold mb-6">Form Absen</h1>
  <form action="/absens/{{pertemuan.id}}/{{user.id}}/{{pertemuan.kelas.id}}" method="POST" class="space-y-4">
    
    <div>
      <label for="status" class="block text-sm font-medium text-gray-700 mb-1">Status</label>
      <select id="status" name="status" required class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
        <option value="hadir">Hadir</option>
        <option value="izin">Izin</option>
        <option value="sakit">Sakit</option>
        <option value="alfa">Alfa</option>
        <option value="tidak ada keterangan">Tidak Ada Keterangan</option>
      </select>
    </div>

    <div>
      <label for="waktu_absen" class="block text-sm font-medium text-gray-700 mb-1">Waktu Absen</label>
      <input type="date" id="waktu_absen" name="waktu_absen" required value="2025-06-06" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
    </div>

    <div>
      <label for="keterangan" class="block text-sm font-medium text-gray-700 mb-1">Keterangan</label>
      <input type="text" id="keterangan" name="keterangan" required value="hadir" placeholder="Masukkan keterangan..." class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
    </div>

    <div>
      <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
        Simpan Absen
      </button>
    </div>
  </form>
</div>
