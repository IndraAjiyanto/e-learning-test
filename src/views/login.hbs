<div class="min-h-screen flex items-center justify-center 
            bg-gradient-to-br from-gray-900 via-gray-800 to-gray-700 
            px-4 pt-28 py-20">

  <div class="w-full max-w-4xl flex items-center justify-center">
    <div class="w-full max-w-md mx-auto bg-transparent rounded-2xl p-8 shadow-lg">
      
      <!-- Logo -->
      <div class="flex items-center justify-center mb-6">
        <img src="/public/image/logo.png" alt="Logo" class="h-16 w-auto" />
      </div>

      <!-- Title -->
      <div class="text-center mb-6">
        <h1 class="text-2xl font-bold text-white mt-2">E-Learning Platform</h1>
        <p class="text-gray-400 text-xs mt-2 whitespace-nowrap">
          Access learning materials and join interactive online classes.
        </p>
      </div>

      <!-- Error Alert -->
      {{#if error}}
        <div role="alert" class="mb-6 p-4 rounded-xl bg-red-900/30 border border-red-500/40 backdrop-blur-sm">
          <div class="flex items-start gap-3">
            <div class="flex-shrink-0 mt-0.5">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="flex-1">
              <p class="text-sm font-medium text-red-200">{{error}}</p>
            </div>
            <button type="button" onclick="this.parentElement.parentElement.style.display='none'" class="flex-shrink-0 text-red-400 hover:text-red-300 transition-colors">
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
        </div>
      {{/if}}

      <!-- Login Form -->
      <form action="/login" method="post" class="space-y-6">
        
        <!-- Email -->
        <div>
          <label class="block text-gray-200 mb-2">Email</label>
          <input 
            type="email" 
            name="email"
            placeholder="email@example.com" 
            required
            class="w-full px-4 py-3 rounded-lg bg-white border border-gray-300 text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white"
          />
        </div>

        <!-- Password -->
        <div x-data="{ show: false }">
          <label class="block text-gray-200 mb-2">Password</label>
          <div class="relative">
            <input 
              :type="show ? 'text' : 'password'" 
              name="password"
              placeholder="********" 
              required
              class="w-full px-4 py-3 rounded-lg bg-white border border-gray-300 text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white pr-10"
            />
            <button type="button" 
              @click="show = !show"
              class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-500 hover:text-gray-800"
            >
              <svg x-show="!show" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" 
                viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" 
                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" 
                  d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 
                     0 8.268 2.943 9.542 7-1.274 4.057-5.064 
                     7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
              <svg x-show="show" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" 
                viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" 
                  d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 
                     0-8.268-2.943-9.542-7a9.973 
                     9.973 0 012.042-3.362M6.223 
                     6.223A9.956 9.956 0 0112 5c4.478 
                     0 8.268 2.943 9.542 7a9.978 
                     9.978 0 01-4.121 4.592M15 
                     12a3 3 0 11-6 0 3 3 0 016 
                     0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 3l18 18" />
              </svg>
            </button>
          </div>
          <div class="flex justify-end mt-2">
            <a href="#" class="text-sm text-indigo-400 hover:text-indigo-300">Forgot password?</a>
          </div>
        </div>

        <!-- Submit Button -->
        <button 
          type="submit"
          class="w-full py-3 rounded-lg bg-gray-900 hover:bg-gray-700 text-white font-semibold transition duration-300">
          Login
        </button>
      </form>

      <!-- Register Link -->
      <div class="text-center mt-4">
        <p class="text-sm text-gray-400">
          Donâ€™t have an account?
          <a href="/register" class="text-indigo-400 hover:text-indigo-300 font-medium">Sign up now</a>
        </p>
      </div>
    </div>
  </div>
</div>
