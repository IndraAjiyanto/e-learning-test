{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
        "assets": [
      {
        "include": "common/public/**/*",
        "outDir": "dist"
      },
      {
        "include": "views/**/*",
        "outDir": "dist"
      }
    ]
  }
}
